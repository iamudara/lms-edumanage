<body class="bg-base-200 min-h-screen">
  
  <%- include('../shared/navbar') %>

  <div class="container mx-auto px-4 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-base-content mb-2">üõ†Ô∏è Bulk Operations Tools</h1>
      <p class="text-base-content/70">Upload CSV files to perform bulk operations on users, enrollments, and grades</p>
    </div>

    <!-- Alert Messages Area -->
    <div id="alertContainer" class="mb-6"></div>

    <!-- Tabs Navigation -->
    <div class="tabs tabs-box bg-base-100 mb-6 shadow-md">
      <a class="tab tab-active" data-tab="users">Bulk Users</a>
      <a class="tab" data-tab="enrollments">Bulk Enrollments</a>
