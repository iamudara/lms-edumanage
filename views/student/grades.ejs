<!DOCTYPE html>
<html lang="en" data-theme="corporate">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - LMS EduManage</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-base-200 min-h-screen">
  <%- include('../shared/navbar') %>

  <div class="container mx-auto px-4 py-8">
    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-4xl font-bold text-base-content mb-2">
            ðŸŽ“ My Grades
          </h1>
          <p class="text-base-content/70">
            View your assignment scores and performance breakdown by course.
          </p>
        </div>
        <a href="/student/dashboard" class="btn btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Dashboard
        </a>
      </div>
    </div>

    <!-- Overall Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Total Courses -->
      <div class="stats shadow bg-primary text-primary-content">
        <div class="stat">
          <div class="stat-figure text-white/80">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <div class="stat-title text-primary-content/80">Enrolled Courses</div>
          <div class="stat-value"><%= stats.totalCourses %></div>
        </div>
      </div>

      <!-- Graded Assignments -->
      <div class="stats shadow bg-success text-success-content">
        <div class="stat">
          <div class="stat-figure text-white/80">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="stat-title text-success-content/80">Graded Assignments</div>
          <div class="stat-value"><%= stats.totalGradedAssignments %></div>
          <div class="stat-desc text-success-content/70">Assignments with scores</div>
        </div>
      </div>

      <!-- Average Assignment Score -->
      <div class="stats shadow bg-info text-info-content">
        <div class="stat">
          <div class="stat-figure text-white/80">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div class="stat-title text-info-content/80">Average Score</div>
          <div class="stat-value"><%= stats.averageAssignmentScore ? stats.averageAssignmentScore.toFixed(1) + '%' : 'N/A' %></div>
          <div class="stat-desc text-info-content/70">From all graded assignments</div>
        </div>
      </div>
    </div>

    <% if (courseGrades.length === 0) { %>
      <!-- No Grades Yet -->
      <div class="card bg-base-100 shadow-lg">
        <div class="card-body text-center py-16">
          <div class="text-6xl mb-4">ðŸ“Š</div>
          <h3 class="text-xl font-semibold text-base-content/70 mb-2">No Grades Yet</h3>
          <p class="text-base-content/50 mb-6">You don't have any course grades yet. Complete assignments to see your grades here.</p>
          <a href="/student/courses" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            View My Courses
          </a>
        </div>
      </div>
    <% } else { %>
      <!-- Course Grades -->
      <div class="space-y-6">
        <% courseGrades.forEach(courseData => { %>
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body">
              <!-- Course Header -->
              <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-6">
                <div class="flex items-center gap-4">
                  <div class="avatar placeholder">
                    <div class="bg-primary text-primary-content rounded-xl w-14 h-14">
                      <span class="text-xl font-bold"><%= courseData.course.code.substring(0, 2) %></span>
                    </div>
                  </div>
                  <div>
                    <h2 class="text-xl font-bold"><%= courseData.course.title %></h2>
                    <div class="flex items-center gap-2 text-base-content/70">
                      <span class="badge badge-outline"><%= courseData.course.code %></span>
                      <span>â€¢</span>
                      <span><%= courseData.course.teacher ? courseData.course.teacher.full_name : 'Unknown Instructor' %></span>
                    </div>
                  </div>
                </div>
                
                <!-- Course Average Score -->
                <div class="text-center">
                  <div class="text-sm text-base-content/60 mb-1">Avg. Score</div>
                  <div class="text-2xl font-bold <%= 
                    courseData.averageScore >= 70 ? 'text-success' : 
                    courseData.averageScore >= 50 ? 'text-warning' : 
                    courseData.averageScore !== null ? 'text-error' : 'text-base-content/50'
                  %>">
                    <%= courseData.averageScore !== null ? courseData.averageScore.toFixed(1) + '%' : 'N/A' %>
                  </div>
                </div>
              </div>

              <!-- Progress Bar -->
              <div class="mb-4">
                <div class="flex justify-between text-sm mb-1">
                  <span class="text-base-content/70">Assignments Completed</span>
                  <span class="font-medium"><%= courseData.gradedAssignments %>/<%= courseData.totalAssignments %></span>
                </div>
                <progress class="progress progress-primary w-full" value="<%= courseData.gradedAssignments %>" max="<%= courseData.totalAssignments %>"></progress>
              </div>

              <!-- Assignment Scores Breakdown -->
              <% if (courseData.assignments.length > 0) { %>
                <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                  <input type="checkbox" />
                  <div class="collapse-title font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                    Assignment Scores Breakdown (<%= courseData.gradedAssignments %> graded)
                  </div>
                  <div class="collapse-content">
                    <div class="overflow-x-auto mt-2">
                      <table class="table table-sm">
                        <thead>
                          <tr>
                            <th>Assignment</th>
                            <th>Deadline</th>
                            <th>Submitted</th>
                            <th>Score</th>
                            <th>Status</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% courseData.assignments.forEach(assignment => { %>
                            <tr>
                              <td>
                                <a href="/student/assignments/<%= assignment.id %>" class="link link-hover font-medium">
                                  <%= assignment.title %>
                                </a>
                              </td>
                              <td class="text-sm text-base-content/70">
                                <%= new Date(assignment.deadline).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                              </td>
                              <td>
                                <% if (assignment.submission) { %>
                                  <span class="text-sm">
                                    <%= new Date(assignment.submission.submitted_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                                  </span>
                                  <% 
                                    const submittedDate = new Date(assignment.submission.submitted_at);
                                    const deadlineDate = new Date(assignment.deadline);
                                    const isLate = submittedDate > deadlineDate;
                                  %>
                                  <% if (isLate) { %>
                                    <span class="badge badge-error badge-xs ml-1">Late</span>
                                  <% } %>
                                <% } else { %>
                                  <span class="text-base-content/50">â€”</span>
                                <% } %>
                              </td>
                              <td>
                                <% if (assignment.submission && assignment.submission.marks !== null) { %>
                                  <span class="font-bold <%= 
                                    assignment.submission.marks >= 70 ? 'text-success' : 
                                    assignment.submission.marks >= 50 ? 'text-warning' : 'text-error'
                                  %>">
                                    <%= assignment.submission.marks %>%
                                  </span>
                                <% } else { %>
                                  <span class="text-base-content/50">â€”</span>
                                <% } %>
                              </td>
                              <td>
                                <% if (!assignment.submission) { %>
                                  <% const isPastDeadline = new Date(assignment.deadline) < new Date(); %>
                                  <% if (isPastDeadline) { %>
                                    <span class="badge badge-error badge-sm">Missing</span>
                                  <% } else { %>
                                    <span class="badge badge-warning badge-sm">Pending</span>
                                  <% } %>
                                <% } else if (assignment.submission.marks !== null) { %>
                                  <span class="badge badge-success badge-sm">Graded</span>
                                <% } else { %>
                                  <span class="badge badge-info badge-sm">Submitted</span>
                                <% } %>
                              </td>
                            </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              <% } else { %>
                <div class="text-center py-4 text-base-content/50">
                  No assignments in this course yet.
                </div>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>

    <!-- Performance Summary Card -->
    <% if (stats.totalGradedAssignments > 0) { %>
      <div class="card bg-gradient-to-r from-primary to-info text-primary-content mt-8">
        <div class="card-body">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
            <div>
              <h3 class="text-2xl font-bold mb-2">ðŸ“ˆ Performance Summary</h3>
              <p class="text-primary-content/80">
                You have completed <%= stats.totalGradedAssignments %> graded assignment<%= stats.totalGradedAssignments !== 1 ? 's' : '' %> 
                across <%= stats.totalCourses %> course<%= stats.totalCourses !== 1 ? 's' : '' %>.
              </p>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold"><%= stats.averageAssignmentScore ? stats.averageAssignmentScore.toFixed(0) + '%' : 'N/A' %></div>
              <div class="text-sm text-primary-content/70">Overall Average</div>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Score Guide -->
    <div class="card bg-base-100 shadow-lg mt-8">
      <div class="card-body">
        <h3 class="card-title text-lg mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Score Guide
        </h3>
        <div class="flex flex-wrap gap-4">
          <div class="flex items-center gap-2">
            <span class="badge badge-success">70-100%</span>
            <span class="text-sm text-base-content/70">Excellent</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="badge badge-warning">50-69%</span>
            <span class="text-sm text-base-content/70">Satisfactory</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="badge badge-error">Below 50%</span>
            <span class="text-sm text-base-content/70">Needs Improvement</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../shared/footer') %>
</body>
</html>
