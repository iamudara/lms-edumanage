<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - LMS EduManage</title>
  <link href="/css/output.css" rel="stylesheet">
  <link href="/css/custom.css" rel="stylesheet">
  <link href="/css/teacher-theme.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-base-200 min-h-screen">
  <%- include('../shared/navbar') %>

  <div class="container mx-auto px-4 py-8">
    <!-- Back Button -->
    <div class="mb-6">
      <a href="/student/dashboard" class="btn btn-ghost btn-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Dashboard
      </a>
    </div>

    <!-- Course Header -->
    <div class="card bg-base-100 shadow-lg mb-8">
      <div class="card-body">
        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
          <div class="flex-1">
            <h1 class="text-4xl font-bold text-base-content mb-2">
              üìö <%= course.title %>
            </h1>
            <div class="flex flex-wrap gap-3 mb-4">
              <span class="badge badge-primary badge-lg"><%= course.code %></span>
            </div>
            <p class="text-base-content/70 mb-4">
              <%= course.description || 'No description available.' %>
            </p>
            <div class="flex items-center gap-2 text-base-content/60">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span class="font-medium">Instructor:</span>
              <% const primaryTeacher = course.courseTeachers?.find(ct => ct.is_primary)?.teacher; %>
              <span><%= primaryTeacher ? primaryTeacher.full_name : 'Unknown' %></span>
            </div>
          </div>

          <!-- Statistics -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="stat place-items-center bg-base-200 rounded-lg p-4">
              <div class="stat-title">Materials</div>
              <div class="stat-value text-primary"><%= stats.totalMaterials %></div>
            </div>
            <div class="stat place-items-center bg-base-200 rounded-lg p-4">
              <div class="stat-title">Assignments</div>
              <div class="stat-value text-secondary"><%= stats.submittedAssignments %>/<%= stats.totalAssignments %></div>
              <div class="stat-desc">Submitted</div>
            </div>
            <div class="stat place-items-center bg-base-200 rounded-lg p-4">
              <div class="stat-title">Avg Score</div>
              <div class="stat-value text-accent"><%= stats.averageScore || 'N/A' %></div>
              <% if (stats.averageScore) { %>
                <div class="stat-desc"><%= stats.gradedAssignments %> graded</div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Course Materials Section -->
    <div class="card bg-base-100 shadow-lg mb-8">
      <div class="card-body">
        <h2 class="text-2xl font-bold mb-6">üìÑ Course Materials</h2>
        
        <% if ((course.Materials && course.Materials.length > 0) || (folderTree && folderTree.length > 0)) { %>
          
          <!-- Direct Course Materials -->
          <% if (course.Materials && course.Materials.length > 0) { %>
            <div class="mb-6">
              <h3 class="text-lg font-semibold mb-3 text-base-content/80">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Course Files
              </h3>
              <div class="overflow-x-auto">
                <table class="table table-zebra">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Description</th>
                      <th>Uploaded</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% course.Materials.forEach(material => { %>
                      <tr>
                        <td class="font-medium">
                          <div class="flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            <%= material.title %>
                          </div>
                        </td>
                        <td class="text-base-content/70 max-w-md truncate">
                          <%= material.description || 'No description' %>
                        </td>
                        <td class="text-sm text-base-content/60">
                          <%= new Date(material.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                        </td>
                        <td>
                          <a href="<%= material.file_url %>" target="_blank" class="btn btn-primary btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                            </svg>
                            Download
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          <% } %>

          <!-- Shared Folders -->
          <% if (folderTree && folderTree.length > 0) { %>
            <div class="mt-6">
              <h3 class="text-lg font-semibold mb-3 text-base-content/80">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
                Shared Folders
              </h3>
              
              <div class="space-y-3" id="folderTree">
                <% function renderStudentFolder(folder, level = 0) { %>
                  <div class="folder-item" style="margin-left: <%= level * 20 %>px">
                    <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                      <input type="checkbox" name="folder-accordion" <% if (level === 0) { %>checked<% } %>>
                      <div class="collapse-title text-md font-medium flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                        </svg>
                        <%= folder.name %>
                        <span class="badge badge-ghost badge-sm"><%= folder.materials ? folder.materials.length : 0 %> files</span>
                      </div>
                      <div class="collapse-content">
                        <% if (folder.description) { %>
                          <p class="text-sm text-base-content/60 mb-3"><%= folder.description %></p>
                        <% } %>
                        
                        <!-- Folder Materials -->
                        <% if (folder.materials && folder.materials.length > 0) { %>
                          <div class="overflow-x-auto">
                            <table class="table table-sm">
                              <tbody>
                                <% folder.materials.forEach(material => { %>
                                  <tr>
                                    <td class="font-medium">
                                      <div class="flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                        </svg>
                                        <%= material.title %>
                                      </div>
                                    </td>
                                    <td class="text-base-content/60 text-sm max-w-xs truncate">
                                      <%= material.description || '' %>
                                    </td>
                                    <td class="text-right">
                                      <a href="<%= material.file_url %>" target="_blank" class="btn btn-primary btn-xs">
                                        Download
                                      </a>
                                    </td>
                                  </tr>
                                <% }) %>
                              </tbody>
                            </table>
                          </div>
                        <% } else { %>
                          <p class="text-sm text-base-content/50 italic">No materials in this folder</p>
                        <% } %>
                        
                        <!-- Subfolders -->
                        <% if (folder.children && folder.children.length > 0) { %>
                          <div class="mt-3 space-y-2">
                            <% folder.children.forEach(child => { %>
                              <%- renderStudentFolder(child, level + 1) %>
                            <% }) %>
                          </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                <% } %>

                <% folderTree.forEach(folder => { %>
                  <%- renderStudentFolder(folder, 0) %>
                <% }) %>
              </div>
            </div>
          <% } %>

        <% } else { %>
          <div class="text-center py-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            <p class="text-base-content/60 text-lg">No materials available for this course yet.</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Assignments Section -->
    <div class="card bg-base-100 shadow-lg mb-8">
      <div class="card-body">
        <h2 class="text-2xl font-bold mb-6">üìù Assignments</h2>
        
        <% if (course.Assignments && course.Assignments.length > 0) { %>
          <div class="space-y-4">
            <% course.Assignments.forEach(assignment => { %>
              <% 
                const submission = assignment.Submissions && assignment.Submissions.length > 0 ? assignment.Submissions[0] : null;
                const deadline = new Date(assignment.deadline);
                const now = new Date();
                const isPastDeadline = deadline < now;
                const daysUntil = Math.ceil((deadline - now) / (1000 * 60 * 60 * 24));
                const isUrgent = daysUntil <= 2 && daysUntil >= 0;
              %>
              
              <div class="card bg-base-200 shadow-md hover:shadow-lg transition-shadow">
                <div class="card-body">
                  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                    <div class="flex-1">
                      <h3 class="card-title text-lg mb-2">
                        <a href="/student/assignments/<%= assignment.id %>" class="link link-hover">
                          <%= assignment.title %>
                        </a>
                      </h3>
                      <p class="text-base-content/70 text-sm mb-3 line-clamp-2">
                        <%= assignment.description || 'No description available.' %>
                      </p>
                      
                      <!-- Deadline and Status -->
                      <div class="flex flex-wrap gap-2 items-center">
                        <div class="flex items-center gap-1 text-sm">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          <span class="font-medium">Due:</span>
                          <span class="<%= isPastDeadline ? 'text-error' : '' %>">
                            <%= deadline.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                          </span>
                        </div>
                        
                        <% if (isUrgent && !submission) { %>
                          <span class="badge badge-error badge-sm">Urgent - <%= daysUntil %> day<%= daysUntil !== 1 ? 's' : '' %> left</span>
                        <% } else if (isPastDeadline && !submission) { %>
                          <span class="badge badge-error badge-sm">Overdue</span>
                        <% } %>
                        
                        <% if (submission) { %>
                          <span class="badge badge-success badge-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            Submitted
                          </span>
                          <% if (submission.marks !== null) { %>
                            <span class="badge badge-info badge-sm">Score: <%= submission.marks %>%</span>
                          <% } else { %>
                            <span class="badge badge-warning badge-sm">Pending Grade</span>
                          <% } %>
                        <% } %>
                      </div>
                    </div>
                    
                    <!-- Actions -->
                    <div class="flex flex-col gap-2">
                      <a href="/student/assignments/<%= assignment.id %>" class="btn btn-primary btn-sm">
                        <% if (submission) { %>
                          View Submission
                        <% } else { %>
                          View Details
                        <% } %>
                      </a>
                      <% if (submission && submission.marks !== null && submission.feedback) { %>
                        <button class="btn btn-ghost btn-sm" onclick="viewFeedback_<%= assignment.id %>.showModal()">
                          View Feedback
                        </button>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Feedback Modal -->
              <% if (submission && submission.marks !== null && submission.feedback) { %>
                <dialog id="viewFeedback_<%= assignment.id %>" class="modal">
                  <div class="modal-box">
                    <h3 class="font-bold text-lg mb-4">Feedback - <%= assignment.title %></h3>
                    <div class="mb-4">
                      <p class="text-sm text-base-content/70 mb-2">Your Score:</p>
                      <p class="text-2xl font-bold text-success"><%= submission.marks %>%</p>
                    </div>
                    <div>
                      <p class="text-sm text-base-content/70 mb-2">Feedback from Instructor:</p>
                      <div class="bg-base-200 p-4 rounded-lg">
                        <p class="whitespace-pre-wrap"><%= submission.feedback %></p>
                      </div>
                    </div>
                    <div class="modal-action">
                      <form method="dialog">
                        <button class="btn">Close</button>
                      </form>
                    </div>
                  </div>
                  <form method="dialog" class="modal-backdrop">
                    <button>close</button>
                  </form>
                </dialog>
              <% } %>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="text-base-content/60 text-lg">No assignments available for this course yet.</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Assignment Scores Section -->
    <% if (stats.gradedAssignments > 0) { %>
    <div class="card bg-base-100 shadow-lg mb-8">
      <div class="card-body">
        <h2 class="text-2xl font-bold mb-6">üéì Assignment Scores</h2>
        
        <div class="overflow-x-auto">
          <table class="table table-zebra">
            <thead>
              <tr>
                <th>Assignment</th>
                <th>Score</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% course.Assignments.forEach(assignment => { %>
                <% const submission = assignment.Submissions && assignment.Submissions.length > 0 ? assignment.Submissions[0] : null; %>
                <tr>
                  <td><%= assignment.title %></td>
                  <td>
                    <% if (submission && submission.marks !== null) { %>
                      <span class="font-bold text-lg <%= submission.marks >= 70 ? 'text-success' : submission.marks >= 50 ? 'text-warning' : 'text-error' %>">
                        <%= submission.marks %>%
                      </span>
                    <% } else { %>
                      <span class="text-base-content/50">-</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (submission && submission.marks !== null) { %>
                      <span class="badge badge-success">Graded</span>
                    <% } else if (submission) { %>
                      <span class="badge badge-warning">Pending</span>
                    <% } else { %>
                      <span class="badge badge-ghost">Not Submitted</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        
        <% if (stats.averageScore) { %>
          <div class="mt-4 flex items-center justify-end gap-2">
            <span class="text-base-content/70">Average Score:</span>
            <span class="text-2xl font-bold text-primary"><%= stats.averageScore %>%</span>
          </div>
        <% } %>
      </div>
    </div>
    <% } %>

    <!-- Quick Actions -->
    <div class="card bg-base-100 shadow-lg">
      <div class="card-body">
        <h3 class="card-title mb-4">Quick Actions</h3>
        <div class="flex flex-wrap gap-3">
          <a href="/student/dashboard" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Back to Dashboard
          </a>
          <a href="/student/submissions" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            My Submissions
          </a>
          <a href="/student/grades" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            All Grades
          </a>
        </div>
      </div>
    </div>
  </div>

  <%- include('../shared/footer') %>
</body>
</html>
