  <script>
    // Submit form type switching
    function switchSubmissionType(type) {
      const fileSection = document.getElementById('fileUploadSection');
      const textSection = document.getElementById('textSubmissionSection');
      const tabs = document.querySelectorAll('#submitModal .tab');
      
      if (type === 'file') {
        fileSection.classList.remove('hidden');
        textSection.classList.add('hidden');
        tabs[0].classList.add('tab-active');
        tabs[1].classList.remove('tab-active');
      } else {
        fileSection.classList.add('hidden');
        textSection.classList.remove('hidden');
        tabs[0].classList.remove('tab-active');
        tabs[1].classList.add('tab-active');
      }
    }

    // Resubmit form type switching
    function switchResubmissionType(type) {
      const fileSection = document.getElementById('resubmitFileSection');
      const textSection = document.getElementById('resubmitTextSection');
      const tabs = document.querySelectorAll('#resubmitModal .tab');
      
      if (type === 'file') {
        fileSection.classList.remove('hidden');
        textSection.classList.add('hidden');
        tabs[0].classList.add('tab-active');
        tabs[1].classList.remove('tab-active');
      } else {
        fileSection.classList.add('hidden');
        textSection.classList.remove('hidden');
        tabs[0].classList.remove('tab-active');
        tabs[1].classList.add('tab-active');
      }
    }

    // Submit assignment
    async function submitAssignment() {
      const form = document.getElementById('submitForm');
      const fileInput = document.getElementById('submissionFile');
      const textInput = document.getElementById('submissionText');
      const submitBtn = document.getElementById('submitBtn');
      const errorDiv = document.getElementById('submitError');
      const errorMsg = document.getElementById('submitErrorMessage');
      
      // Hide previous errors
      errorDiv.classList.add('hidden');
      document.getElementById('fileError').classList.add('hidden');
      document.getElementById('textError').classList.add('hidden');
      
      // Validate input
      const isFileUpload = !document.getElementById('fileUploadSection').classList.contains('hidden');
      
      if (isFileUpload) {
        if (!fileInput.files || fileInput.files.length === 0) {
          document.getElementById('fileError').textContent = 'Please select a file to upload';
          document.getElementById('fileError').classList.remove('hidden');
          return;
        }
        
        // Validate file size (10MB)
        if (fileInput.files[0].size > 10 * 1024 * 1024) {
          document.getElementById('fileError').textContent = 'File size must be less than 10MB';
          document.getElementById('fileError').classList.remove('hidden');
          return;
        }
      } else {
        if (!textInput.value || textInput.value.trim().length < 10) {
          document.getElementById('textError').textContent = 'Text submission must be at least 10 characters';
          document.getElementById('textError').classList.remove('hidden');
          return;
        }
      }
      
      // Prepare form data
      const formData = new FormData();
      if (isFileUpload && fileInput.files[0]) {
        formData.append('submission', fileInput.files[0]);
      } else if (textInput.value) {
        formData.append('submission_text', textInput.value.trim());
      }
      
      // Disable button and show loading
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span class="loading loading-spinner"></span> Submitting...';
      
      // Show progress bar for file uploads
      const progressDiv = document.getElementById('uploadProgress');
      const progressBar = document.getElementById('uploadProgressBar');
      const progressPercentage = document.getElementById('uploadPercentage');
      const uploadedSizeSpan = document.getElementById('uploadedSize');
      const totalSizeSpan = document.getElementById('totalSize');
      
      if (isFileUpload && fileInput.files[0]) {
        progressDiv.classList.remove('hidden');
        const fileSizeMB = (fileInput.files[0].size / (1024 * 1024)).toFixed(2);
        totalSizeSpan.textContent = fileSizeMB + ' MB';
      }
      
      try {
        // Use XMLHttpRequest for upload progress tracking
        const xhr = new XMLHttpRequest();
        
        // Track upload progress
        xhr.upload.addEventListener('progress', (e) => {
          if (e.lengthComputable) {
            const percentComplete = Math.round((e.loaded / e.total) * 100);
            progressBar.value = percentComplete;
            progressPercentage.textContent = percentComplete + '%';
            uploadedSizeSpan.textContent = (e.loaded / (1024 * 1024)).toFixed(2) + ' MB';
          }
        });
        
        // Handle completion
        xhr.addEventListener('load', () => {
          progressDiv.classList.add('hidden');
          
          if (xhr.status === 200) {
            const data = JSON.parse(xhr.responseText);
            if (data.success) {
              // Success - reload page to show submission
              window.location.reload();
            } else {
              // Show error
              errorMsg.textContent = data.message || 'Failed to submit assignment';
              errorDiv.classList.remove('hidden');
              submitBtn.disabled = false;
              submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg> Submit Assignment';
            }
          } else {
            errorMsg.textContent = 'Server error. Please try again.';
            errorDiv.classList.remove('hidden');
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg> Submit Assignment';
          }
        });
        
        // Handle errors
        xhr.addEventListener('error', () => {
          progressDiv.classList.add('hidden');
          errorMsg.textContent = 'Network error. Please try again.';
          errorDiv.classList.remove('hidden');
          submitBtn.disabled = false;
          submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg> Submit Assignment';
        });
        
        // Send the request
        xhr.open('POST', '/student/assignments/<%= assignment.id %>/submit');
        xhr.send(formData);
        
      } catch (error) {
        progressDiv.classList.add('hidden');
        errorMsg.textContent = 'Network error. Please try again.';
        errorDiv.classList.remove('hidden');
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg> Submit Assignment';
      }
    }

