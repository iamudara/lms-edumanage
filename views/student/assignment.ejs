<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - LMS EduManage</title>
  <link href="/css/output.css" rel="stylesheet">
  <link href="/css/custom.css" rel="stylesheet">
  <link href="/css/teacher-theme.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-base-200 min-h-screen">
  <%- include('../shared/navbar') %>

  <div class="container mx-auto px-3 sm:px-4 py-4 sm:py-8 max-w-7xl">
    <!-- Back Button -->
    <div class="mb-6">
      <a href="/student/courses/<%= assignment.course.id %>" class="btn btn-ghost btn-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Course
      </a>
    </div>

    <!-- Assignment Header -->
    <div class="card bg-base-100 shadow-lg mb-8">
      <div class="card-body">
        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
          <div class="flex-1">
            <h1 class="text-4xl font-bold text-base-content mb-3">
              üìù <%= assignment.title %>
            </h1>
            
            <!-- Course Badge -->
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="badge badge-primary badge-lg">
                <%= assignment.course.code %> - <%= assignment.course.title %>
              </span>
            </div>

            <!-- Instructor Info -->
            <div class="flex items-center gap-2 text-base-content/70 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span class="font-medium">Instructor:</span>
              <% const primaryTeacher = assignment.course.courseTeachers?.find(ct => ct.is_primary)?.teacher; %>
              <span><%= primaryTeacher ? primaryTeacher.full_name : 'Unknown' %></span>
            </div>
          </div>

          <!-- Deadline Info Card -->
          <div class="stats shadow <%= deadline.isPastDeadline ? 'bg-error text-error-content' : deadline.isUrgent ? 'bg-warning text-warning-content' : 'bg-success text-success-content' %>">
            <div class="stat place-items-center">
              <div class="stat-title <%= deadline.isPastDeadline ? 'text-error-content/80' : deadline.isUrgent ? 'text-warning-content/80' : 'text-success-content/80' %>">
                <%= deadline.isPastDeadline ? 'Overdue' : 'Due Date' %>
              </div>
              <div class="stat-value text-2xl">
                <%= deadline.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
              </div>
              <div class="stat-desc <%= deadline.isPastDeadline ? 'text-error-content/80' : deadline.isUrgent ? 'text-warning-content/80' : 'text-success-content/80' %>">
                <%= deadline.date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %>
              </div>
              <% if (!deadline.isPastDeadline) { %>
                <div class="stat-desc mt-1 <%= deadline.isUrgent ? 'text-warning-content/80' : 'text-success-content/80' %>">
                  <%= deadline.daysUntil %> day<%= deadline.daysUntil !== 1 ? 's' : '' %> left
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content Column -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Assignment Description -->
        <div class="card bg-base-100 shadow-lg">
          <div class="card-body">
            <h2 class="card-title text-2xl mb-4">üìÑ Assignment Description</h2>
            <div class="prose max-w-none">
              <% if (assignment.description) { %>
                <p class="text-base-content/80 whitespace-pre-wrap"><%= assignment.description %></p>
              <% } else { %>
                <p class="text-base-content/60 italic">No description provided.</p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Assignment Materials -->
        <% if (assignment.materials && assignment.materials.length > 0) { %>
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body">
              <h2 class="card-title text-2xl mb-4">üìé Assignment Materials</h2>
              <div class="space-y-3">
                <% assignment.materials.forEach(material => { %>
                  <div class="flex items-center justify-between p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
                    <div class="flex items-center gap-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                      </svg>
                      <span class="font-medium"><%= material.title %></span>
                    </div>
                    <a href="<%= material.url %>" target="_blank" class="btn btn-primary btn-sm">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                      </svg>
                      Download
                    </a>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Submission Section -->
        <% if (submission) { %>
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body">
              <h2 class="card-title text-2xl mb-4">
                ‚úÖ Your Submission
                <% if (submission.marks !== null) { %>
                  <span class="badge badge-success badge-lg ml-2">Graded</span>
                <% } else { %>
                  <span class="badge badge-warning badge-lg ml-2">Pending Grade</span>
                <% } %>
              </h2>

              <!-- Submission Info -->
              <div class="bg-base-200 p-4 rounded-lg mb-4">
                <div class="flex flex-wrap items-center gap-2 text-sm mb-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="font-medium">Submitted:</span>
                  <span><%= new Date(submission.submitted_at).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></span>
                </div>
                <% 
                  const submittedDate = new Date(submission.submitted_at);
                  const deadlineDate = new Date(assignment.deadline);
                  const isLate = submittedDate > deadlineDate;
                %>
                <% if (isLate) { %>
                  <div class="mt-2">
                    <span class="badge badge-error badge-sm">Late Submission</span>
                  </div>
                <% } else { %>
                  <div class="mt-2">
                    <span class="badge badge-success badge-sm">On Time</span>
                  </div>
                <% } %>
              </div>

              <!-- Submission Content -->
              <% if (submission.file_url) { %>
                <div class="mb-4">
                  <p class="text-sm font-medium mb-2">Submitted File:</p>
                  <a href="<%= submission.file_url %>" target="_blank" class="btn btn-primary btn-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    View Submitted File
                  </a>
                </div>
              <% } %>

              <% if (submission.submission_text) { %>
                <div class="mb-4">
                  <p class="text-sm font-medium mb-2">Submission Text:</p>
                  <div class="bg-base-200 p-4 rounded-lg">
                    <p class="whitespace-pre-wrap text-base-content/80"><%= submission.submission_text %></p>
                  </div>
                </div>
              <% } %>

              <!-- Grade Information -->
              <% if (submission.marks !== null) { %>
                <div class="divider"></div>
                <div class="bg-success/10 p-4 rounded-lg">
                  <div class="flex items-center justify-between mb-3">
                    <h3 class="text-lg font-bold">Your Score</h3>
                    <span class="text-4xl font-bold text-success"><%= submission.marks %>%</span>
                  </div>
                  <% if (submission.feedback) { %>
                    <div>
                      <p class="text-sm font-medium mb-2">Instructor Feedback:</p>
                      <div class="bg-base-100 p-3 rounded-lg">
                        <p class="whitespace-pre-wrap text-base-content/80"><%= submission.feedback %></p>
                      </div>
                      <% if (submission.grader) { %>
                        <p class="text-sm text-base-content/60 mt-2">
                          Graded by: <%= submission.grader.full_name %>
                        </p>
                      <% } %>
                    </div>
                  <% } %>
                </div>
              <% } %>

              <!-- Resubmit Button -->
              <% if (canResubmit) { %>
                <div class="mt-4">
                  <div class="alert alert-info mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>You can resubmit your work before the deadline. Your previous submission will be replaced.</span>
                  </div>
                  <button onclick="resubmitModal.showModal()" class="btn btn-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Resubmit Assignment
                  </button>
                </div>
              <% } %>
            </div>
          </div>
        <% } else if (canSubmit) { %>
          <!-- No Submission Yet -->
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body text-center">
              <div class="text-6xl mb-4">üì§</div>
              <h2 class="card-title text-2xl justify-center mb-3">Ready to Submit?</h2>
              <p class="text-base-content/70 mb-6">
                You haven't submitted this assignment yet. Click the button below to submit your work.
              </p>
              <button onclick="submitModal.showModal()" class="btn btn-primary btn-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Submit Assignment
              </button>
            </div>
          </div>
        <% } else { %>
          <!-- Cannot Submit -->
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body text-center">
              <div class="text-6xl mb-4">‚è∞</div>
              <h2 class="card-title text-2xl justify-center mb-3 text-error">Deadline Passed</h2>
              <p class="text-base-content/70">
                The deadline for this assignment has passed. You can no longer submit your work.
              </p>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Sidebar Column -->
      <div class="space-y-6">
        <!-- Status Summary -->
        <div class="card bg-base-100 shadow-lg">
          <div class="card-body">
            <h3 class="card-title text-lg mb-4">Status Summary</h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-base-content/70">Submission Status:</span>
                <% if (submission) { %>
                  <span class="badge badge-success">Submitted</span>
                <% } else if (deadline.isPastDeadline) { %>
                  <span class="badge badge-error">Not Submitted</span>
                <% } else { %>
                  <span class="badge badge-warning">Pending</span>
                <% } %>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-base-content/70">Grading Status:</span>
                <% if (submission && submission.marks !== null) { %>
                  <span class="badge badge-success">Graded</span>
                <% } else if (submission) { %>
                  <span class="badge badge-warning">Pending</span>
                <% } else { %>
                  <span class="badge badge-ghost">N/A</span>
                <% } %>
              </div>

              <% if (submission && submission.marks !== null) { %>
                <div class="divider"></div>
                <div class="text-center">
                  <p class="text-sm text-base-content/70 mb-1">Your Score</p>
                  <p class="text-3xl font-bold text-success"><%= submission.marks %>%</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Important Dates -->
        <div class="card bg-base-100 shadow-lg">
          <div class="card-body">
            <h3 class="card-title text-lg mb-4">Important Dates</h3>
            <div class="space-y-3">
              <div>
                <p class="text-sm text-base-content/70">Assignment Created:</p>
                <p class="font-medium"><%= new Date(assignment.created_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></p>
              </div>
              <div>
                <p class="text-sm text-base-content/70">Due Date:</p>
                <p class="font-medium <%= deadline.isPastDeadline ? 'text-error' : '' %>">
                  <%= deadline.date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                </p>
              </div>
              <% if (submission) { %>
                <div>
                  <p class="text-sm text-base-content/70">Submitted On:</p>
                  <p class="font-medium"><%= new Date(submission.submitted_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="card bg-base-100 shadow-lg">
          <div class="card-body">
            <h3 class="card-title text-lg mb-4">Quick Actions</h3>
            <div class="space-y-2">
              <a href="/student/courses/<%= assignment.course.id %>" class="btn btn-outline btn-block btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                Back to Course
              </a>
              <a href="/student/dashboard" class="btn btn-outline btn-block btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Submit Modal -->
  <% if (canSubmit && !submission) { %>
    <dialog id="submitModal" class="modal">
      <div class="modal-box max-w-2xl">
        <h3 class="font-bold text-2xl mb-6">Submit Assignment</h3>
        <p class="text-base-content/70 mb-6">
          Submit your work for <strong><%= assignment.title %></strong>. You can upload a file or enter text.
        </p>
        
        <form id="submitForm" enctype="multipart/form-data">
          <!-- Submission Type Toggle -->
          <div class="tabs tabs-boxed mb-6">
            <a class="tab tab-active" onclick="switchSubmissionType('file')">File Upload</a>
            <a class="tab" onclick="switchSubmissionType('text')">Text Submission</a>
          </div>

          <!-- File Upload Section -->
          <div id="fileUploadSection" class="mb-6">
            <label class="form-control w-full">
              <div class="label">
                <span class="label-text font-medium">Upload File</span>
                <span class="label-text-alt text-base-content/60">Max 10MB</span>
              </div>
              <input type="file" name="submission" id="submissionFile" 
                     class="file-input file-input-bordered w-full" 
                     accept=".pdf,.doc,.docx,.txt,.zip" />
              <div class="label">
                <span class="label-text-alt">Allowed formats: PDF, DOC, DOCX, TXT, ZIP</span>
              </div>
            </label>
            <div id="fileError" class="text-error text-sm mt-2 hidden"></div>
            
            <!-- Upload Progress Bar -->
            <div id="uploadProgress" class="hidden mt-4">
              <div class="flex justify-between text-sm mb-1">
                <span class="font-medium">Uploading...</span>
                <span id="uploadPercentage">0%</span>
              </div>
              <progress id="uploadProgressBar" class="progress progress-primary w-full" value="0" max="100"></progress>
              <div class="text-xs text-base-content opacity-60 mt-1">
                <span id="uploadedSize">0 MB</span> / <span id="totalSize">0 MB</span>
              </div>
            </div>
          </div>

          <!-- Text Submission Section -->
          <div id="textSubmissionSection" class="mb-6 hidden">
            <label class="form-control">
              <div class="label">
                <span class="label-text font-medium">Enter Your Submission</span>
                <span class="label-text-alt text-base-content/60">Plain text or code</span>
              </div>
              <textarea name="submission_text" id="submissionText" 
                        class="textarea textarea-bordered h-48" 
                        placeholder="Type your submission here..."></textarea>
              <div class="label">
                <span class="label-text-alt">Min 10 characters required</span>
              </div>
            </label>
            <div id="textError" class="text-error text-sm mt-2 hidden"></div>
          </div>

          <!-- Important Notes -->
          <div class="alert alert-info mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <div class="font-bold">Important:</div>
              <ul class="list-disc list-inside text-sm">
                <li>You can resubmit before the deadline</li>
                <li>Once graded, you cannot resubmit</li>
                <li>Deadline: <%= deadline.date.toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></li>
              </ul>
            </div>
          </div>

          <div id="submitError" class="alert alert-error mb-4 hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span id="submitErrorMessage"></span>
          </div>

          <div class="modal-action flex gap-2">
            <button type="button" onclick="submitAssignment()" id="submitBtn" class="btn btn-primary flex-1" style="border-radius: 9999px; padding-left: 1rem; padding-right: 1rem;">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Submit Assignment
            </button>
            <button type="button" class="btn flex-1" style="border-radius: 9999px; padding-left: 1rem; padding-right: 1rem; background-color: #ef4444; border-color: #ef4444; color: white;" onclick="closeSubmitModal()">Cancel</button>
          </div>
        </form>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button onclick="closeSubmitModal()">close</button>
      </form>
    </dialog>
  <% } %>

  <!-- Resubmit Modal -->
  <% if (canResubmit) { %>
    <dialog id="resubmitModal" class="modal">
      <div class="modal-box max-w-2xl">
        <h3 class="font-bold text-2xl mb-6">Resubmit Assignment</h3>
        <p class="text-base-content/70 mb-6">
          You are about to resubmit your work for <strong><%= assignment.title %></strong>. Your previous submission will be replaced.
        </p>
        
        <form id="resubmitForm" enctype="multipart/form-data">
          <!-- Submission Type Toggle -->
          <div class="tabs tabs-boxed mb-6">
            <a class="tab tab-active" onclick="switchResubmissionType('file')">File Upload</a>
            <a class="tab" onclick="switchResubmissionType('text')">Text Submission</a>
          </div>

          <!-- File Upload Section -->
          <div id="resubmitFileSection" class="mb-6">
            <label class="form-control w-full">
              <div class="label">
                <span class="label-text font-medium">Upload New File</span>
                <span class="label-text-alt text-base-content/60">Max 10MB</span>
              </div>
              <input type="file" name="submission" id="resubmissionFile" 
                     class="file-input file-input-bordered w-full" 
                     accept=".pdf,.doc,.docx,.txt,.zip" />
              <div class="label">
                <span class="label-text-alt">Allowed formats: PDF, DOC, DOCX, TXT, ZIP</span>
              </div>
            </label>
            <div id="resubmitFileError" class="text-error text-sm mt-2 hidden"></div>
            
            <!-- Resubmit Upload Progress Bar -->
            <div id="resubmitUploadProgress" class="hidden mt-4">
              <div class="flex justify-between text-sm mb-1">
                <span class="font-medium">Uploading...</span>
                <span id="resubmitUploadPercentage">0%</span>
              </div>
              <progress id="resubmitUploadProgressBar" class="progress progress-warning w-full" value="0" max="100"></progress>
              <div class="text-xs text-base-content opacity-60 mt-1">
                <span id="resubmitUploadedSize">0 MB</span> / <span id="resubmitTotalSize">0 MB</span>
              </div>
            </div>
          </div>

