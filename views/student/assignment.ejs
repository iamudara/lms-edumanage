<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= assignment.title %> - <%= assignment.course.code %> - LMS EduManage</title>
  <link href="/css/output.css" rel="stylesheet">
  <link href="/css/custom.css" rel="stylesheet">
  <link href="/css/teacher-theme.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-base-200 min-h-screen">
  <%- include('../shared/navbar') %>

  <div class="page-container">
    <!-- Back Button -->
    <div class="mb-4">
      <a href="/student/courses/<%= assignment.course.id %>" class="btn-glass-custom px-4 inline-flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Course
      </a>
    </div>

    <!-- Assignment Header -->
    <!-- Assignment Header -->
    <div class="card bg-gradient-to-r from-[#1e40af] to-[#3b82f6] text-white shadow-xl mb-8">
      <div class="card-body p-4 sm:p-6">
        <div class="flex flex-col gap-4">
          <div>
            <h1 class="text-xl sm:text-3xl lg:text-4xl font-bold mb-2 text-white flex items-center gap-3 flex-wrap">
              <span class="text-3xl sm:text-4xl">üìù</span>
              <%= assignment.title %>
              <div class="badge badge-outline text-white/90 border-white/40"><%= assignment.course.code %></div>
            </h1>
            
            <div class="flex items-center gap-2 text-white/80 mt-2">
              <span class="font-medium">Instructor:</span>
              <% const primaryTeacher = assignment.course.courseTeachers?.find(ct => ct.is_primary)?.teacher; %>
              <span><%= primaryTeacher ? primaryTeacher.full_name : 'Unknown' %></span>
            </div>
          </div>

          <!-- Deadline Badge -->
          <div class="stats-card mt-4 bg-white/10 border border-white/10 backdrop-blur-sm shadow-none max-w-md">
            <div class="stat place-items-center py-2">
              <div class="stat-title text-white/70">Deadline</div>
              <div class="stat-value text-white text-2xl">
                <%= deadline.date.toLocaleString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
              </div>
              <div class="stat-desc text-white/60">
                <%= deadline.isPastDeadline ? 'Deadline Passed' : deadline.daysUntil + ' days remaining' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content Column -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Description -->
        <div class="card-section">
          <div class="card-body">
            <h2 class="section-title mb-4">üìñ Assignment Description</h2>
            <div class="prose max-w-none">
              <p><%= assignment.description || 'No description provided.' %></p>
            </div>
          </div>
        </div>

        <!-- Assignment Materials -->
        <% if (assignment.materials && assignment.materials.length > 0) { %>
          <div class="card-section">
            <div class="card-body">
              <h2 class="section-title mb-4">üìé Assignment Materials</h2>
              <div class="overflow-x-auto">
                <table class="table table-zebra table-custom">
                  <thead>
                    <tr>
                      <th>Material</th>
                      <th>Type</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% assignment.materials.forEach(material => { %>
                      <tr>
                        <td>
                          <div class="flex items-center gap-3">
                            <div class="text-2xl">
                              <% if (material.type === 'file') { %>
                                <% if (material.file_path && material.file_path.endsWith('.pdf')) { %>üìÑ<% } 
                                   else if (material.file_path && material.file_path.match(/\.(jpg|jpeg|png|gif)$/)) { %>üñºÔ∏è<% }
                                   else { %>üìÅ<% } %>
                              <% } else { %>üîó<% } %>
                            </div>
                            <div class="font-medium"><%= material.title %></div>
                          </div>
                        </td>
                        <td>
                          <span class="badge <%= material.type === 'file' ? 'badge-ghost' : 'badge-info' %> badge-sm">
                            <%= material.type === 'file' ? 'File' : 'Link' %>
                          </span>
                        </td>
                        <td>
                          <% if (material.type === 'file') { %>
                            <a href="/student/assignments/materials/<%= material.id %>/download" class="btn btn-sm btn-primary btn-glass-custom" download>
                              <i class="fas fa-download mr-1"></i>
                              Download
                            </a>
                          <% } else { %>
                            <a href="<%= material.url %>" target="_blank" class="btn btn-sm btn-info btn-glass-custom">
                              <i class="fas fa-external-link-alt mr-1"></i>
                              Open Link
                            </a>
                          <% } %>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Submission Status Area -->
        <% if (submission) { %>
          <!-- Already Submitted -->
          <div class="card-section">
            <div class="card-body">
              <h2 class="section-title mb-4">‚úÖ Your Submission</h2>
              
              <div class="alert <%= submission.marks !== null ? 'alert-success' : 'alert-info' %> mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <div class="font-bold">Submitted on:</div>
                  <div class="text-sm">
                    <%= new Date(submission.submitted_at).toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                    <% if (isLate) { %>
                      <span class="badge badge-error ml-2">Late Submission</span>
                    <% } %>
                  </div>
                </div>
              </div>

              <!-- Submission Content -->
              <div class="bg-base-200 rounded-lg p-4 mb-6">
                <% if (submission.file_url) { %>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <div class="text-3xl">üìÑ</div>
                      <div>
                        <div class="font-bold">Submitted File</div>
                        <div class="text-sm opacity-70">Click to download</div>
                      </div>
                    </div>
                    <a href="<%= submission.file_url %>" class="btn btn-primary btn-sm btn-glass-custom" download>Download</a>
                  </div>
                <% } %>

                <% if (submission.submission_text) { %>
                  <% if (submission.file_url) { %><div class="divider"></div><% } %>
                  <div>
                    <div class="font-bold mb-2">Text Submission:</div>
                    <div class="bg-base-100 p-3 rounded border border-base-300 font-mono text-sm whitespace-pre-wrap"><%= submission.submission_text %></div>
                  </div>
                <% } %>
              </div>

              <!-- Grading Feedback -->
              <% if (submission.marks !== null) { %>
                <div class="divider">Grading & Feedback</div>
                <div class="flex flex-col md:flex-row gap-6">
                  <div class="stats shadow stats-vertical md:stats-horizontal w-full">
                    <div class="stat place-items-center">
                      <div class="stat-title">Score</div>
                      <div class="stat-value text-success"><%= submission.marks %>%</div>
                    </div>
                    <% if (submission.feedback) { %>
                      <div class="stat">
                        <div class="stat-title">Feedback</div>
                        <div class="stat-desc whitespace-pre-wrap mt-1 text-base-content"><%= submission.feedback %></div>
                        <% if (submission.grader) { %>
                          <div class="stat-desc mt-2 text-xs">Graded by: <%= submission.grader.full_name %></div>
                        <% } %>
                      </div>
                    <% } %>
                  </div>
                </div>
              <% } %>

              <!-- Resubmit Button -->
              <% if (canResubmit) { %>
                <div class="divider"></div>
                <div class="flex flex-col items-center gap-4 text-center bg-warning/10 p-4 rounded-lg border border-warning/20">
                  <div class="flex items-center gap-2 text-warning-content justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <span>You can resubmit your work before the deadline. Your previous submission will be replaced.</span>
                  </div>
                  <button onclick="resubmitModal.showModal()" class="btn btn-warning btn-sm">Resubmit</button>
                </div>
              <% } %>
            </div>
          </div>
        
        <% } else if (canSubmit) { %>
          <!-- No Submission Yet -->
          <div class="card-section">
            <div class="card-body text-center">
              <div class="text-6xl mb-4">üì§</div>
              <h2 class="section-title justify-center mb-3">Ready to Submit?</h2>
              <p class="text-base-content/70 mb-6">
                You haven't submitted this assignment yet. Click the button below to submit your work.
              </p>
              <button onclick="submitModal.showModal()" class="btn btn-primary btn-lg btn-glass-custom">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Submit Assignment
              </button>
            </div>
          </div>
        <% } else { %>
          <!-- Deadline Passed -->
          <div class="card-section">
            <div class="card-body text-center">
              <div class="text-6xl mb-4">‚è∞</div>
              <h2 class="section-title justify-center mb-3 text-error">Deadline Passed</h2>
              <p class="text-base-content/70">
                The deadline for this assignment has passed. You can no longer submit your work.
              </p>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Sidebar Column -->
      <div class="space-y-6">
        <!-- Status Summary -->
        <div class="card-section">
          <div class="card-body">
            <h3 class="section-title text-lg mb-4">Status Summary</h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-base-content/70">Submission:</span>
                <% if (submission) { %>
                  <span class="badge badge-success">Submitted</span>
                <% } else if (deadline.isPastDeadline) { %>
                  <span class="badge badge-error">Missing</span>
                <% } else { %>
                  <span class="badge badge-warning">Pending</span>
                <% } %>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-base-content/70">Grading:</span>
                <% if (submission && submission.marks !== null) { %>
                  <span class="badge badge-success">Graded</span>
                <% } else if (submission) { %>
                  <span class="badge badge-info">Pending</span>
                <% } else { %>
                  <span class="badge badge-ghost">N/A</span>
                <% } %>
              </div>

              <% if (submission && submission.marks !== null) { %>
                <div class="divider"></div>
                <div class="text-center">
                  <p class="text-sm text-base-content/70 mb-1">Your Score</p>
                  <p class="text-3xl font-bold text-success"><%= submission.marks %>%</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Important Dates -->
        <div class="card-section">
          <div class="card-body">
            <h3 class="section-title text-lg mb-4">Important Dates</h3>
            <div class="space-y-3">
              <div>
                <p class="text-sm text-base-content/70">Assignment Created:</p>
                <p class="font-medium">
                  <% 
                    const createdDate = assignment.createdAt || assignment.created_at;
                    if (createdDate) { 
                  %>
                    <%= new Date(createdDate).toLocaleDateString() %>
                  <% } else { %>
                    N/A
                  <% } %>
                </p>
              </div>
              <div>
                <p class="text-sm text-base-content/70">Due Date:</p>
                <p class="font-medium <%= deadline.isPastDeadline ? 'text-error' : '' %>">
                  <%= deadline.date.toLocaleString() %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Submit Modal -->
  <% if (canSubmit && !submission) { %>
    <dialog id="submitModal" class="modal">
      <div class="modal-box max-w-2xl">
        <h3 class="font-bold text-2xl mb-6">Submit Assignment</h3>
        <form id="submitForm" enctype="multipart/form-data">
          <!-- Submission Type Toggle -->
          <div class="tabs tabs-boxed mb-6">
            <a class="tab tab-active" onclick="switchSubmissionType('file')">File Upload</a>
            <a class="tab" onclick="switchSubmissionType('text')">Text Submission</a>
          </div>

          <!-- File Upload -->
          <div id="fileUploadSection" class="mb-6">
            <label class="form-control w-full">
              <div class="label">
                <span class="label-text font-medium">Upload File</span>
              </div>
              <input type="file" name="submission" id="submissionFile" class="file-input file-input-bordered w-full" accept=".pdf,.doc,.docx,.txt,.zip" />
              <div id="fileError" class="text-error text-sm mt-2 hidden"></div>
            </label>
            <!-- Progress -->
            <div id="uploadProgress" class="hidden mt-4">
              <progress id="uploadProgressBar" class="progress progress-primary w-full" value="0" max="100"></progress>
              <div class="flex justify-between text-xs opacity-60">
                <span id="uploadPercentage">0%</span>
                <span><span id="uploadedSize">0</span> / <span id="totalSize">0</span> MB</span>
              </div>
            </div>
          </div>

          <!-- Text Upload -->
          <div id="textSubmissionSection" class="mb-6 hidden">
            <textarea name="submission_text" id="submissionText" class="textarea textarea-bordered w-full h-48" placeholder="Type your submission here..."></textarea>
            <div id="textError" class="text-error text-sm mt-2 hidden"></div>
          </div>

          <div id="submitError" class="alert alert-error mb-4 hidden">
             <span id="submitErrorMessage"></span>
          </div>

          <div class="modal-action">
            <button type="button" onclick="submitAssignment()" id="submitBtn" class="btn btn-primary">Submit</button>
            <button type="button" onclick="closeSubmitModal()" class="btn">Cancel</button>
          </div>
        </form>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button onclick="closeSubmitModal()">close</button>
      </form>
    </dialog>
  <% } %>

  <!-- Resubmit Modal -->
  <% if (canResubmit) { %>
    <dialog id="resubmitModal" class="modal">
      <div class="modal-box max-w-2xl">
        <h3 class="font-bold text-2xl mb-6">Resubmit Assignment</h3>
        <div class="alert alert-warning mb-4">
          <span>Warning: This will replace your previous submission.</span>
        </div>
        <form id="resubmitForm" enctype="multipart/form-data">
          <!-- Submission Type Toggle -->
          <div class="tabs tabs-boxed mb-6">
            <a class="tab tab-active" onclick="switchResubmissionType('file')">File Upload</a>
            <a class="tab" onclick="switchResubmissionType('text')">Text Submission</a>
          </div>

          <!-- File Upload -->
          <div id="resubmitFileSection" class="mb-6">
            <label class="form-control w-full">
              <div class="label">
                <span class="label-text font-medium">Upload New File</span>
              </div>
              <input type="file" name="submission" id="resubmissionFile" class="file-input file-input-bordered w-full" accept=".pdf,.doc,.docx,.txt,.zip" />
              <div id="resubmitFileError" class="text-error text-sm mt-2 hidden"></div>
            </label>
            <!-- Progress -->
            <div id="resubmitUploadProgress" class="hidden mt-4">
              <progress id="resubmitUploadProgressBar" class="progress progress-primary w-full" value="0" max="100"></progress>
              <div class="flex justify-between text-xs opacity-60">
                <span id="resubmitUploadPercentage">0%</span>
                <span><span id="resubmitUploadedSize">0</span> / <span id="resubmitTotalSize">0</span> MB</span>
              </div>
            </div>
          </div>

          <!-- Text Upload -->
          <div id="resubmitTextSection" class="mb-6 hidden">
            <textarea name="submission_text" id="resubmissionText" class="textarea textarea-bordered w-full h-48" placeholder="Type your new submission here..."></textarea>
            <div id="resubmitTextError" class="text-error text-sm mt-2 hidden"></div>
          </div>

          <div id="resubmitError" class="alert alert-error mb-4 hidden">
             <span id="resubmitErrorMessage"></span>
          </div>

          <div class="modal-action">
            <button type="button" onclick="resubmitAssignment()" id="resubmitBtn" class="btn btn-warning">Resubmit</button>
            <button type="button" onclick="closeResubmitModal()" class="btn">Cancel</button>
          </div>
        </form>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button onclick="closeResubmitModal()">close</button>
      </form>
    </dialog>
  <% } %>

  <script>
    function switchSubmissionType(type) {
      const fileSection = document.getElementById('fileUploadSection');
      const textSection = document.getElementById('textSubmissionSection');
      const tabs = document.querySelectorAll('#submitModal .tab');
      
      if (type === 'file') {
        fileSection.classList.remove('hidden');
        textSection.classList.add('hidden');
        tabs[0].classList.add('tab-active');
        tabs[1].classList.remove('tab-active');
      } else {
        fileSection.classList.add('hidden');
        textSection.classList.remove('hidden');
        tabs[0].classList.remove('tab-active');
        tabs[1].classList.add('tab-active');
      }
    }

    function switchResubmissionType(type) {
      const fileSection = document.getElementById('resubmitFileSection');
      const textSection = document.getElementById('resubmitTextSection');
      const tabs = document.querySelectorAll('#resubmitModal .tab');
      
      if (type === 'file') {
        fileSection.classList.remove('hidden');
        textSection.classList.add('hidden');
        tabs[0].classList.add('tab-active');
        tabs[1].classList.remove('tab-active');
      } else {
        fileSection.classList.add('hidden');
        textSection.classList.remove('hidden');
        tabs[0].classList.remove('tab-active');
        tabs[1].classList.add('tab-active');
      }
    }

    async function submitAssignment() {
      const fileInput = document.getElementById('submissionFile');
      const textInput = document.getElementById('submissionText');
      const submitBtn = document.getElementById('submitBtn');
      const errorDiv = document.getElementById('submitError');
      const errorMsg = document.getElementById('submitErrorMessage');
      
      errorDiv.classList.add('hidden');
      document.getElementById('fileError').classList.add('hidden');
      document.getElementById('textError').classList.add('hidden');
      
      const isFileUpload = !document.getElementById('fileUploadSection').classList.contains('hidden');
      
      if (isFileUpload) {
        if (!fileInput.files || fileInput.files.length === 0) {
          document.getElementById('fileError').textContent = 'Please select a file';
          document.getElementById('fileError').classList.remove('hidden');
          return;
        }
      } else {
        if (!textInput.value || textInput.value.trim().length < 10) {
          document.getElementById('textError').textContent = 'Min 10 chars required';
          document.getElementById('textError').classList.remove('hidden');
          return;
        }
      }
      
      const formData = new FormData();
      if (isFileUpload) {
        formData.append('submission', fileInput.files[0]);
      } else {
        formData.append('submission_text', textInput.value.trim());
      }
      
      submitBtn.disabled = true;
      submitBtn.textContent = 'Submitting...';
      
      // Progress Setup (Simplified)
      const progressBar = document.getElementById('uploadProgressBar');
      const progressDiv = document.getElementById('uploadProgress');
      if (isFileUpload) progressDiv.classList.remove('hidden');

      const xhr = new XMLHttpRequest();
      xhr.upload.addEventListener('progress', (e) => {
        if (e.lengthComputable && isFileUpload) {
           const percent = Math.round((e.loaded / e.total) * 100);
           progressBar.value = percent;
           document.getElementById('uploadPercentage').textContent = percent + '%';
        }
      });
      
      xhr.addEventListener('load', () => {
         progressDiv.classList.add('hidden');
         if (xhr.status === 200) {
             try {
                const data = JSON.parse(xhr.responseText);
                if (data.success) window.location.reload();
                else {
                    errorMsg.textContent = data.message;
                    errorDiv.classList.remove('hidden');
                }
             } catch(e) {
                 errorMsg.textContent = 'Invalid response';
                 errorDiv.classList.remove('hidden');
             }
         } else {
             errorMsg.textContent = 'Server error';
             errorDiv.classList.remove('hidden');
         }
         submitBtn.disabled = false;
         submitBtn.textContent = 'Submit';
      });

      xhr.addEventListener('error', () => {
          progressDiv.classList.add('hidden');
          errorMsg.textContent = 'Network error';
          errorDiv.classList.remove('hidden');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Submit';
      });
      
      xhr.open('POST', '/student/assignments/<%= assignment.id %>/submit');
      xhr.send(formData);
    }

