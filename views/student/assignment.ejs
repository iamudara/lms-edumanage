                }
             } catch(e) {
                 errorMsg.textContent = 'Invalid response';
                 errorDiv.classList.remove('hidden');
             }
         } else {
             errorMsg.textContent = 'Server error';
             errorDiv.classList.remove('hidden');
         }
         submitBtn.disabled = false;
         submitBtn.textContent = 'Resubmit';
      });

      xhr.addEventListener('error', () => {
          progressDiv.classList.add('hidden');
          errorMsg.textContent = 'Network error';
          errorDiv.classList.remove('hidden');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Resubmit';
      });
      
      xhr.open('POST', '/student/assignments/<%= assignment.id %>/submit');
      xhr.send(formData);
    }
    
    function closeSubmitModal() {
        document.getElementById('submitModal').close();
    }
    function closeResubmitModal() {
        document.getElementById('resubmitModal').close();
    }
  </script>

  <%- include('../shared/footer') %>
</body>
