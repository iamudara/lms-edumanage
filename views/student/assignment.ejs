    // Reset forms
    function resetSubmitForm() {
      document.getElementById('submitForm').reset();
      document.getElementById('submitError').classList.add('hidden');
      document.getElementById('fileError').classList.add('hidden');
      document.getElementById('textError').classList.add('hidden');
      switchSubmissionType('file');
    }

    function resetResubmitForm() {
      document.getElementById('resubmitForm').reset();
      document.getElementById('resubmitError').classList.add('hidden');
      document.getElementById('resubmitFileError').classList.add('hidden');
      document.getElementById('resubmitTextError').classList.add('hidden');
      switchResubmissionType('file');
    }

    // Close modal functions
    function closeSubmitModal() {
      resetSubmitForm();
      document.getElementById('submitModal').close();
    }

    function closeResubmitModal() {
      resetResubmitForm();
      document.getElementById('resubmitModal').close();
    }
  </script>

