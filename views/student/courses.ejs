<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - LMS EduManage</title>
  <link href="/css/output.css" rel="stylesheet">
  <link href="/css/custom.css" rel="stylesheet">
  <link href="/css/teacher-theme.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-base-200 min-h-screen">
  <%- include('../shared/navbar') %>

  <div class="container mx-auto px-4 py-4 sm:py-8">
    <!-- Page Header -->
    <div class="mb-6 sm:mb-8">
      <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-base-content mb-2">
        <i class="fas fa-book mr-2"></i>My Courses
      </h1>
      <p class="text-sm sm:text-base text-base-content/70">
        All courses you are enrolled in through your batch, organized by semester
      </p>
    </div>

    <% if (courses && courses.length > 0) { %>
      <%
        // Group courses by semester
        const coursesBySemester = {};
        const semesterOrder = ['Semester 1', 'Semester 2', 'Semester 3', 'Semester 4', 'Semester 5', 'Semester 6', 'Semester 7', 'Semester 8', 'Other'];
        
        courses.forEach(course => {
          const semester = course.semester || 'Other';
          if (!coursesBySemester[semester]) {
            coursesBySemester[semester] = [];
          }
          coursesBySemester[semester].push(course);
        });

        // Sort semesters in order
        const sortedSemesters = Object.keys(coursesBySemester).sort((a, b) => {
          const indexA = semesterOrder.indexOf(a);
          const indexB = semesterOrder.indexOf(b);
          return (indexA === -1 ? 999 : indexA) - (indexB === -1 ? 999 : indexB);
        });
      %>

      <!-- Semester Filter Tabs -->
      <div class="flex flex-wrap gap-2 mb-4 sm:mb-6">
        <button class="btn btn-primary btn-sm semester-tab" data-semester="all" onclick="filterBySemester('all', this)" style="border-radius: 9999px; border: none; padding-left: 1.5rem; padding-right: 1.5rem;">
          All
        </button>
        <% sortedSemesters.forEach(semester => { %>
          <button class="btn btn-ghost btn-sm semester-tab" data-semester="<%= semester %>" onclick="filterBySemester('<%= semester %>', this)" style="border-radius: 9999px; border: none; padding-left: 1.5rem; padding-right: 1.5rem;">
            <%= semester %>
          </button>
        <% }) %>
      </div>

      <!-- Courses grouped by semester -->
      <% sortedSemesters.forEach(semester => { %>
        <div class="semester-section mb-6 sm:mb-8" data-semester="<%= semester %>">
          <div class="flex items-center gap-3 mb-4">
            <div class="badge badge-lg badge-primary gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <%= semester %>
            </div>
            <span class="text-base-content/60 text-sm"><%= coursesBySemester[semester].length %> course<%= coursesBySemester[semester].length !== 1 ? 's' : '' %></span>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
            <% coursesBySemester[semester].forEach(course => { %>
              <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
                <div class="card-body p-4 sm:p-6">
                  <!-- Course Header -->
                  <div class="flex items-start justify-between mb-4">
                    <div class="flex-1">
                      <h2 class="card-title text-lg sm:text-xl mb-2">
                        <%= course.title %>
                      </h2>
                      <div class="flex gap-2 mb-3">
                        <span class="badge badge-primary"><%= course.code %></span>
                        <% if (course.semester) { %>
                          <span class="badge badge-outline badge-sm"><%= course.semester %></span>
                        <% } %>
                      </div>
                    </div>
                  </div>

                  <!-- Course Description -->
                  <p class="text-base-content/70 text-sm mb-4 line-clamp-3">
                    <%= course.description || 'No description available.' %>
                  </p>

                  <!-- Course Info -->
                  <div class="space-y-2 mb-4">
                    <div class="flex items-center gap-2 text-sm">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      <span class="text-base-content/60">Instructor:</span>
                      <% const primaryTeacher = course.courseTeachers?.find(ct => ct.is_primary)?.teacher; %>
                      <span class="font-medium"><%= primaryTeacher ? primaryTeacher.full_name : 'Unknown' %></span>
                    </div>

                    <% if (course.BatchEnrollments && course.BatchEnrollments[0] && course.BatchEnrollments[0].batch) { %>
                      <div class="flex items-center gap-2 text-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <span class="text-base-content/60">Batch:</span>
                        <span class="font-medium"><%= course.BatchEnrollments[0].batch.name %></span>
                      </div>
                    <% } %>
                  </div>

                  <!-- Course Statistics -->
                  <div class="flex gap-4 mb-4">
                    <div class="flex items-center gap-1 text-sm">
                      <span class="text-primary font-bold"><%= course.Materials ? course.Materials.length : 0 %></span>
                      <span class="text-base-content/60">Materials</span>
                    </div>
                    <div class="flex items-center gap-1 text-sm">
                      <span class="text-secondary font-bold"><%= course.Assignments ? course.Assignments.length : 0 %></span>
                      <span class="text-base-content/60">Assignments</span>
                    </div>
                  </div>

                  <!-- Action Button -->
                  <div class="card-actions justify-end">
                    <a href="/student/courses/<%= course.id %>" class="btn btn-primary w-full sm:w-auto" style="border-radius: 9999px;">
                      <i class="fas fa-eye mr-2"></i>
                      View
                    </a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>

      <!-- Course Summary -->
      <div class="card bg-base-100 shadow-lg mt-8">
        <div class="card-body p-4 sm:p-6">
          <h3 class="card-title text-lg sm:text-xl mb-4">Course Summary</h3>
          
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="stat place-items-center">
              <div class="stat-title">Total Enrolled</div>
              <div class="stat-value text-primary"><%= courses.length %></div>
              <div class="stat-desc">Active courses</div>
            </div>
            
            <div class="stat place-items-center">
              <div class="stat-title">Total Materials</div>
              <div class="stat-value text-info">
                <%= courses.reduce((sum, c) => sum + (c.Materials ? c.Materials.length : 0), 0) %>
              </div>
              <div class="stat-desc">Available resources</div>
            </div>
            
            <div class="stat place-items-center">
              <div class="stat-title">Total Assignments</div>
              <div class="stat-value text-warning">
                <%= courses.reduce((sum, c) => sum + (c.Assignments ? c.Assignments.length : 0), 0) %>
              </div>
              <div class="stat-desc">To complete</div>
            </div>
          </div>
        </div>
      </div>

    <% } else { %>
      <!-- Empty State -->
      <div class="card bg-base-100 shadow-lg">
        <div class="card-body text-center py-12 sm:py-16">
          <div class="text-6xl sm:text-8xl mb-4"><i class="fas fa-book text-base-content/20"></i></div>
          <h2 class="text-xl sm:text-2xl font-bold text-base-content mb-2">No Courses Yet</h2>
          <p class="text-sm sm:text-base text-base-content/60 mb-6">
            You are not enrolled in any courses yet. Please contact your administrator.
          </p>
          <div class="flex gap-4 justify-center">
            <a href="/student/dashboard" class="btn btn-primary w-full sm:w-auto" style="border-radius: 9999px;">
              <i class="fas fa-home mr-2"></i>
              Go to Dashboard
            </a>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Quick Actions -->
    <div class="flex flex-wrap gap-3 mt-8">
      <a href="/student/dashboard" class="btn btn-outline">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Dashboard
      </a>
      <a href="/student/grades" class="btn btn-outline">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        All Grades
      </a>
    </div>
  </div>

  <%- include('../shared/footer') %>

  <script>
    function filterBySemester(semester, clickedBtn) {
      // Update active button styling
      document.querySelectorAll('.semester-tab').forEach(btn => {
        btn.classList.remove('btn-primary');
        btn.classList.add('btn-ghost');
      });
      clickedBtn.classList.remove('btn-ghost');
      clickedBtn.classList.add('btn-primary');

      // Filter sections
      document.querySelectorAll('.semester-section').forEach(section => {
        if (semester === 'all' || section.dataset.semester === semester) {
          section.style.display = 'block';
        } else {
          section.style.display = 'none';
        }
      });
    }
  </script>
</body>
</html>
