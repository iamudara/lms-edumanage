<!DOCTYPE html>
<html lang="en" data-theme="corporate">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - LMS EduManage</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-base-200 min-h-screen">
  <%- include('../shared/navbar') %>

  <div class="container mx-auto px-4 py-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-base-content mb-2">
        ðŸ“š My Courses
      </h1>
      <p class="text-base-content/70">
        All courses you are enrolled in through your batch
      </p>
    </div>

    <% if (courses && courses.length > 0) { %>
      <!-- Courses Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% courses.forEach(course => { %>
          <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
            <div class="card-body">
              <!-- Course Header -->
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <h2 class="card-title text-xl mb-2">
                    <%= course.title %>
                  </h2>
                  <div class="flex gap-2 mb-3">
                    <span class="badge badge-primary"><%= course.code %></span>
                  </div>
                </div>
              </div>

              <!-- Course Description -->
              <p class="text-base-content/70 text-sm mb-4 line-clamp-3">
                <%= course.description || 'No description available.' %>
              </p>

              <!-- Course Info -->
              <div class="space-y-2 mb-4">
                <div class="flex items-center gap-2 text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span class="text-base-content/60">Instructor:</span>
                  <span class="font-medium"><%= course.teacher.full_name %></span>
                </div>

                <% if (course.BatchEnrollments && course.BatchEnrollments[0] && course.BatchEnrollments[0].batch) { %>
                  <div class="flex items-center gap-2 text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <span class="text-base-content/60">Batch:</span>
                    <span class="font-medium"><%= course.BatchEnrollments[0].batch.name %></span>
                  </div>
                <% } %>
              </div>

              <!-- Course Statistics -->
              <div class="stats stats-vertical shadow mb-4">
                <div class="stat py-2 px-4">
                  <div class="stat-title text-xs">Materials</div>
                  <div class="stat-value text-2xl text-primary">
                    <%= course.Materials ? course.Materials.length : 0 %>
                  </div>
                </div>
                
                <div class="stat py-2 px-4">
                  <div class="stat-title text-xs">Assignments</div>
                  <div class="stat-value text-2xl text-secondary">
                    <%= course.Assignments ? course.Assignments.length : 0 %>
                  </div>
                </div>
              </div>

              <!-- Action Button -->
              <div class="card-actions justify-end">
                <a href="/student/courses/<%= course.id %>" class="btn btn-primary btn-block">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  View Course
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Summary Card -->
      <div class="card bg-base-100 shadow-lg mt-8">
        <div class="card-body">
          <h3 class="card-title">Course Summary</h3>
          <div class="stats stats-horizontal shadow">
            <div class="stat">
              <div class="stat-title">Total Enrolled</div>
              <div class="stat-value text-primary"><%= courses.length %></div>
              <div class="stat-desc">Active courses</div>
            </div>
            
            <div class="stat">
              <div class="stat-title">Total Materials</div>
              <div class="stat-value text-info">
                <%= courses.reduce((sum, c) => sum + (c.Materials ? c.Materials.length : 0), 0) %>
              </div>
              <div class="stat-desc">Available resources</div>
            </div>
            
            <div class="stat">
              <div class="stat-title">Total Assignments</div>
              <div class="stat-value text-warning">
                <%= courses.reduce((sum, c) => sum + (c.Assignments ? c.Assignments.length : 0), 0) %>
              </div>
              <div class="stat-desc">To complete</div>
            </div>
          </div>
        </div>
      </div>

    <% } else { %>
      <!-- Empty State -->
      <div class="card bg-base-100 shadow-lg">
        <div class="card-body text-center py-16">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <h2 class="text-2xl font-bold text-base-content mb-2">No Courses Yet</h2>
          <p class="text-base-content/60 mb-6">
            You are not enrolled in any courses yet. Please contact your administrator.
          </p>
          <div class="flex gap-4 justify-center">
            <a href="/student/dashboard" class="btn btn-primary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Go to Dashboard
            </a>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Quick Actions -->
    <div class="flex flex-wrap gap-3 mt-8">
      <a href="/student/dashboard" class="btn btn-outline">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Dashboard
      </a>
      <a href="/student/submissions" class="btn btn-outline">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        My Submissions
      </a>
      <a href="/student/grades" class="btn btn-outline">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        All Grades
      </a>
    </div>
  </div>

  <%- include('../shared/footer') %>
</body>
</html>
