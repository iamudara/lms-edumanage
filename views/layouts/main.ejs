<!DOCTYPE html>
<html lang="en" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>LMS EduManage</title>
    
    <!-- Tailwind CSS + DaisyUI -->
    <link href="/css/output.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/custom.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Chart.js for statistics -->
    <% if (typeof useCharts !== 'undefined' && useCharts) { %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <% } %>
    
    <!-- DataTables for data management -->
    <% if (typeof useDataTables !== 'undefined' && useDataTables) { %>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <% } %>
</head>
<body class="bg-base-200 min-h-screen">
    <!-- Navbar -->
    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('../shared/navbar', { user: user }) %>
    <% } %>
    
    <!-- Flash Messages -->
    <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success shadow-lg max-w-4xl mx-auto mt-4">
        <div>
            <i class="fas fa-check-circle"></i>
            <span><%= success %></span>
        </div>
    </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error shadow-lg max-w-4xl mx-auto mt-4">
        <div>
            <i class="fas fa-exclamation-circle"></i>
            <span><%= error %></span>
        </div>
    </div>
    <% } %>
    
    <% if (typeof warning !== 'undefined' && warning) { %>
    <div class="alert alert-warning shadow-lg max-w-4xl mx-auto mt-4">
        <div>
            <i class="fas fa-exclamation-triangle"></i>
            <span><%= warning %></span>
        </div>
    </div>
    <% } %>
    
    <% if (typeof info !== 'undefined' && info) { %>
    <div class="alert alert-info shadow-lg max-w-4xl mx-auto mt-4">
        <div>
            <i class="fas fa-info-circle"></i>
            <span><%= info %></span>
        </div>
    </div>
    <% } %>
    
    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <%- body %>
    </main>
    
    <!-- Footer -->
    <%- include('../shared/footer') %>
    
    <!-- Custom Scripts -->
    <% if (typeof scripts !== 'undefined' && scripts) { %>
        <%- scripts %>
    <% } %>
</body>
</html>
