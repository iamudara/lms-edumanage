<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> - LMS EduManage</title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="min-h-screen">
  <%- include('../shared/navbar') %>

  <div class="container mx-auto px-4 py-8">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
      <div>
        <h1 class="text-3xl font-bold">
          <i class="fas fa-book mr-2"></i>My Courses
        </h1>
        <p class="text-base-content/70 mt-1">Manage all your courses</p>
      </div>
      <a href="/teacher/courses/create" class="btn btn-primary px-6">
        <i class="fas fa-plus mr-2"></i>Create New Course
      </a>
    </div>

    <!-- Batch Filter Tabs -->
    <% if (batches && batches.length > 0) { %>
      <div class="flex flex-wrap gap-2 mb-8">
        <button class="btn btn-sm sm:btn-md filter-tab batch-filter-btn active-batch btn-primary" data-batch="all">
          <i class="fas fa-th-large mr-2"></i><span>All Batches</span>
        </button>
        <% batches.forEach(batch => { %>
          <button class="btn btn-sm sm:btn-md btn-ghost batch-filter-btn" data-batch="<%= batch.id %>">
            <i class="fas fa-users mr-2"></i><%= batch.name %>
          </button>
        <% }); %>
      </div>
    <% } %>

    <!-- Courses Grid -->
    <% if (courses.length === 0) { %>
      <div class="card bg-base-100 border border-base-200">
        <div class="card-body text-center py-16">
          <i class="fas fa-book-open text-6xl text-base-content/20 mb-4"></i>
          <h2 class="text-2xl font-bold mb-2">No Courses Yet</h2>
          <p class="text-base-content/70 mb-6">Start creating courses to manage your teaching content</p>
          <div>
            <a href="/teacher/courses/create" class="btn btn-primary btn-wide">
              <i class="fas fa-plus mr-2"></i>Create Your First Course
            </a>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="courses-grid">
        <% courses.forEach(course => { 
          // Calculate enrolled students
          let enrolledStudents = 0;
          const courseBatchIds = [];
          if (course.BatchEnrollments) {
            course.BatchEnrollments.forEach(enrollment => {
              enrolledStudents += enrollment.batch.students.length;
              courseBatchIds.push(enrollment.batch.id);
            });
          }
          
          const assignmentCount = course.Assignments ? course.Assignments.length : 0;
          const batchCount = course.BatchEnrollments ? course.BatchEnrollments.length : 0;
          
          // Check if current user is primary teacher
          const primaryTeacher = course.courseTeachers?.find(ct => ct.is_primary);
          const isOwner = primaryTeacher?.teacher_id === user.id;
        %>
          <div class="course-card" 
               onclick="window.location.href='/teacher/courses/<%= course.id %>'"
               data-batch-ids="<%= courseBatchIds.join(',') %>">
            <div class="card-body p-5">
              <!-- Course Code Badge and Ownership -->
              <div class="flex justify-between items-start mb-3">
                <div class="badge badge-primary badge-lg">
                  <%= course.code %>
                </div>
                <% if (!isOwner) { %>
                  <div class="badge badge-info badge-sm gap-1">
                    <i class="fas fa-user-plus text-xs"></i>
                    Assigned
                  </div>
                <% } %>
              </div>

              <!-- Course Title -->
              <h2 class="card-title text-xl mb-2">
                <%= course.title %>
              </h2>

              <!-- Primary Teacher (if assigned course) -->
              <% if (!isOwner && primaryTeacher && primaryTeacher.teacher) { %>
                <p class="text-xs text-base-content/60 mb-2">
                  <i class="fas fa-user-tie mr-1"></i>
                  Primary: <%= primaryTeacher.teacher.full_name %>
                </p>
              <% } %>

              <!-- Course Description -->
              <p class="text-base-content/70 text-sm mb-4 line-clamp-3 min-h-[3rem]">
                <%= course.description || 'No description available' %>
              </p>

              <!-- Statistics Labels -->
              <div class="grid grid-cols-3 gap-2 mb-4">
                <div class="flex flex-col items-center justify-center p-2 bg-base-200/50 rounded-xl hover:bg-base-200 transition-colors">
                  <div class="text-lg font-bold text-primary"><%= batchCount %></div>
                  <div class="text-xs font-medium text-base-content/60">Batches</div>
                </div>
                <div class="flex flex-col items-center justify-center p-2 bg-base-200/50 rounded-xl hover:bg-base-200 transition-colors">
                  <div class="text-lg font-bold text-secondary"><%= enrolledStudents %></div>
                  <div class="text-xs font-medium text-base-content/60">Students</div>
                </div>
                <div class="flex flex-col items-center justify-center p-2 bg-base-200/50 rounded-xl hover:bg-base-200 transition-colors">
                  <div class="text-lg font-bold text-accent"><%= assignmentCount %></div>
                  <div class="text-xs font-medium text-base-content/60">Assignments</div>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="grid grid-cols-3 gap-2">
                <a href="/teacher/courses/<%= course.id %>/assignments/create" class="btn btn-primary btn-sm w-full" onclick="event.stopPropagation();" title="Create Assignment">
                  <i class="fas fa-plus"></i>
                </a>
                <a href="/teacher/courses/<%= course.id %>/materials" class="btn btn-secondary btn-sm w-full" onclick="event.stopPropagation();" title="Materials">
                  <i class="fas fa-file-alt"></i>
                </a>
                <a href="/teacher/courses/<%= course.id %>/grades" class="btn btn-accent btn-sm w-full" onclick="event.stopPropagation();" title="Grades">
                  <i class="fas fa-chart-bar"></i>
                </a>
              </div>

              <!-- Created Date -->
              <div class="text-xs text-base-content/50 mt-4 flex items-center">
                <i class="far fa-clock mr-1"></i>
                <% 
                  const createDate = course.created_at || course.createdAt;
                  const dateStr = createDate ? new Date(createDate).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric', 
                    year: 'numeric' 
                  }) : 'Unknown';
                %>
                Created <%= dateStr %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Summary Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12 w-full">
        <!-- Total Courses -->
        <div class="stat-card-gradient-primary rounded-xl p-6 shadow-lg">
          <div class="flex flex-col gap-1">
            <div class="text-white/80 font-medium">Total Courses</div>
            <div class="text-4xl font-bold text-white"><%= courses.length %></div>
            <div class="text-white/60 text-sm mt-1">
              <% 
                const ownedCount = courses.filter(c => c.isOwner !== false).length;
                const assignedCount = courses.length - ownedCount;
              %>
              <%= ownedCount %> owned, <%= assignedCount %> assigned
            </div>
          </div>
        </div>
        
        <!-- Total Students -->
        <div class="stat-card-gradient-secondary rounded-xl p-6 shadow-lg">
          <div class="flex flex-col gap-1">
            <div class="text-white/80 font-medium">Total Students</div>
            <div class="text-4xl font-bold text-white">
              <% 
                let totalStudents = 0;
                courses.forEach(course => {
                  if (course.BatchEnrollments) {
                    course.BatchEnrollments.forEach(enrollment => {
                      totalStudents += enrollment.batch.students.length;
                    });
                  }
                });
              %>
              <%= totalStudents %>
            </div>
            <div class="text-white/60 text-sm mt-1">Across all courses</div>
          </div>
        </div>
        
        <!-- Total Assignments -->
        <div class="stat-card-gradient-accent rounded-xl p-6 shadow-lg">
          <div class="flex flex-col gap-1">
            <div class="text-white/80 font-medium">Total Assignments</div>
            <div class="text-4xl font-bold text-white">
              <% 
                let totalAssignments = 0;
                courses.forEach(course => {
                  if (course.Assignments) {
                    totalAssignments += course.Assignments.length;
                  }
                });
              %>
              <%= totalAssignments %>
            </div>
            <div class="text-white/60 text-sm mt-1">Active assignments</div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <%- include('../shared/footer') %>

  <script>
    // Batch filter functionality
    document.addEventListener('DOMContentLoaded', function() {
      const filterButtons = document.querySelectorAll('.batch-filter-btn');
      const courseCards = document.querySelectorAll('.course-card');

      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          const selectedBatch = this.dataset.batch;

          // Update button styles
          filterButtons.forEach(btn => {
            btn.classList.remove('active-batch', 'btn-primary');
            btn.classList.add('btn-ghost');
          });
          
          this.classList.remove('btn-ghost');
          this.classList.add('active-batch', 'btn-primary');

          // Filter courses
          courseCards.forEach(card => {
            const cardBatches = card.dataset.batchIds.split(',');
            
            if (selectedBatch === 'all') {
              card.style.display = '';
            } else if (cardBatches.includes(selectedBatch)) {
              card.style.display = '';
            } else {
              card.style.display = 'none';
            }
          });
        });
      });
    });
  </script>
</body>
</html>
