<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> - LMS EduManage</title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="min-h-screen">
  <%- include('../shared/navbar') %>

  <div class="page-container">
    <!-- Page Header -->
    <div class="page-header flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div>
        <h1 class="page-title">
          <i class="fas fa-book mr-2"></i>My Courses
        </h1>
        <p class="page-subtitle">Manage all your courses</p>
      </div>
      <a href="/teacher/courses/create" class="btn-global-primary px-4 py-2 rounded-lg w-full sm:w-auto text-center flex items-center justify-center gap-2">
        <i class="fas fa-plus"></i>Create New Course
      </a>
    </div>

    <!-- Batch Filter Tabs -->
    <% if (batches && batches.length > 0) { %>
      <div class="filter-tabs-container">
        <button class="filter-tab batch-filter-btn active-batch filter-tab-active" data-batch="all">
          <i class="fas fa-th-large text-sm sm:text-base mr-2"></i><span>All Batches</span>
        </button>
        <% batches.forEach(batch => { %>
          <button class="filter-tab btn-ghost batch-filter-btn" data-batch="<%= batch.id %>">
            <i class="fas fa-users text-sm sm:text-base mr-2"></i><%= batch.name %>
          </button>
        <% }); %>
      </div>
    <% } %>

    <!-- Courses Grid -->
    <% if (courses.length === 0) { %>
      <div class="card-section border border-base-300">
        <div class="card-body text-center py-16">
          <i class="fas fa-book-open text-6xl text-base-content/20 mb-4"></i>
          <h2 class="text-2xl font-bold mb-2">No Courses Yet</h2>
          <p class="text-base-content/70 mb-6">Start creating courses to manage your teaching content</p>
          <div>
            <a href="/teacher/courses/create" class="btn-global-primary btn-wide">
              <i class="fas fa-plus mr-2"></i>Create Your First Course
            </a>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="course-grid" id="courses-grid">
        <% courses.forEach(course => { 
          // Calculate enrolled students
          let enrolledStudents = 0;
          const courseBatchIds = [];
          if (course.BatchEnrollments) {
            course.BatchEnrollments.forEach(enrollment => {
              enrolledStudents += enrollment.batch.students.length;
              courseBatchIds.push(enrollment.batch.id);
            });
          }
          
          const assignmentCount = course.Assignments ? course.Assignments.length : 0;
          const batchCount = course.BatchEnrollments ? course.BatchEnrollments.length : 0;
          
          // Check if current user is primary teacher
          const primaryTeacher = course.courseTeachers?.find(ct => ct.is_primary);
          const isOwner = primaryTeacher?.teacher_id === user.id;
        %>
          <div class="course-card" 
               onclick="window.location.href='/teacher/courses/<%= course.id %>'"
               data-batch-ids="<%= courseBatchIds.join(',') %>">
            <div class="course-card-body">
              <!-- Course Code Badge and Ownership -->
              <div class="flex justify-between items-start mb-2">
                <div class="badge badge-primary badge-lg">
                  <%= course.code %>
                </div>
                <% if (!isOwner) { %>
                  <div class="badge badge-info badge-sm gap-1">
                    <i class="fas fa-user-plus text-xs"></i>
                    Assigned
                  </div>
                <% } %>
              </div>

              <!-- Course Title -->
              <h2 class="card-title text-xl mb-2">
                <%= course.title %>
              </h2>

              <!-- Primary Teacher (if assigned course) -->
              <% if (!isOwner && primaryTeacher && primaryTeacher.teacher) { %>
                <p class="text-xs text-base-content/60 mb-2">
                  <i class="fas fa-user-tie mr-1"></i>
                  Primary: <%= primaryTeacher.teacher.full_name %>
                </p>
              <% } %>

              <!-- Course Description -->
              <p class="text-base-content/70 text-sm mb-4 line-clamp-3">
                <%= course.description || 'No description available' %>
              </p>

              <!-- Statistics -->
              <div class="course-stats-container">
                <div class="course-stat-box">
                  <div class="course-stat-value text-primary"><%= batchCount %></div>
                  <div class="course-stat-label">Batches</div>
                </div>
                <div class="course-stat-box">
                  <div class="course-stat-value text-secondary"><%= enrolledStudents %></div>
                  <div class="course-stat-label">Students</div>
                </div>
                <div class="course-stat-box">
                  <div class="course-stat-value text-accent"><%= assignmentCount %></div>
                  <div class="course-stat-label">Assignments</div>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="action-buttons-grid">
                <a href="/teacher/courses/<%= course.id %>/assignments/create" class="btn-global-primary btn-sm" onclick="event.stopPropagation();">
                  <i class="fas fa-plus sm:mr-1"></i><span class="hidden sm:inline text-xs">Assignment</span>
                </a>
                <a href="/teacher/courses/<%= course.id %>/materials" class="btn-global-secondary btn-sm" onclick="event.stopPropagation();">
                  <i class="fas fa-file-alt sm:mr-1"></i><span class="hidden sm:inline text-xs">Materials</span>
                </a>
                <a href="/teacher/courses/<%= course.id %>/grades" class="btn-global-accent btn-sm" onclick="event.stopPropagation();">
                  <i class="fas fa-chart-bar sm:mr-1"></i><span class="hidden sm:inline text-xs">Grades</span>
                </a>
              </div>

              <!-- Created Date -->
              <div class="text-xs text-base-content/50 mt-2">
                <i class="far fa-clock mr-1"></i>
                <% 
                  const createDate = course.created_at || course.createdAt;
                  const dateStr = createDate ? new Date(createDate).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric',
                    year: 'numeric'
                  }) : 'Unknown';
                %>
                Created <%= dateStr %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Summary Stats -->
      <div class="stats-grid mt-8 w-full">
        <div class="stats-card stats-card-primary">
          <div class="stat">
            <div class="stat-figure text-primary-content/50">
              <i class="fas fa-book text-3xl"></i>
            </div>
            <div class="stat-title text-primary-content/80">Total Courses</div>
            <div class="stat-value"><%= courses.length %></div>
            <div class="stat-desc text-primary-content/60">
              <% 
                const ownedCount = courses.filter(c => c.isOwner !== false).length;
                const assignedCount = courses.length - ownedCount;
              %>
              <%= ownedCount %> owned, <%= assignedCount %> assigned
            </div>
          </div>
        </div>
        
        <div class="stats-card stats-card-secondary">
          <div class="stat">
            <div class="stat-figure text-secondary-content/50">
              <i class="fas fa-users text-3xl"></i>
            </div>
            <div class="stat-title text-secondary-content/80">Total Students</div>
            <div class="stat-value">
              <% 
                let totalStudents = 0;
                courses.forEach(course => {
                  if (course.BatchEnrollments) {
                    course.BatchEnrollments.forEach(enrollment => {
                      totalStudents += enrollment.batch.students.length;
                    });
                  }
                });
              %>
              <%= totalStudents %>
            </div>
            <div class="stat-desc text-secondary-content/60">Across all courses</div>
          </div>
        </div>
        
        <div class="stats-card stats-card-accent">
          <div class="stat">
            <div class="stat-figure text-accent-content/50">
              <i class="fas fa-tasks text-3xl"></i>
            </div>
            <div class="stat-title text-accent-content/80">Total Assignments</div>
            <div class="stat-value">
              <% 
                let totalAssignments = 0;
                courses.forEach(course => {
                  if (course.Assignments) {
                    totalAssignments += course.Assignments.length;
                  }
                });
              %>
              <%= totalAssignments %>
            </div>
            <div class="stat-desc text-accent-content/60">Active assignments</div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <%- include('../shared/footer') %>

  <script>
    // Batch filter functionality
    document.addEventListener('DOMContentLoaded', function() {
      const filterButtons = document.querySelectorAll('.batch-filter-btn');
      const courseCards = document.querySelectorAll('.course-card');

      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          const selectedBatch = this.dataset.batch;

          // Update button styles
          filterButtons.forEach(btn => {
            btn.classList.remove('active-batch');
            btn.classList.remove('filter-tab-active'); // Remove custom active class
            btn.classList.add('btn-ghost');
          });
          this.classList.remove('btn-ghost');
          this.classList.add('filter-tab-active'); // Add global active class
          this.classList.add('active-batch');

          // Filter courses
          courseCards.forEach(card => {
            const cardBatches = card.dataset.batchIds.split(',');
            
            if (selectedBatch === 'all') {
              card.style.display = '';
            } else if (cardBatches.includes(selectedBatch)) {
              card.style.display = '';
            } else {
              card.style.display = 'none';
            }
          });
        });
      });
    });
  </script>
</body>
</html>
