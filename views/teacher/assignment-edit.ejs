<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle || 'Edit Assignment' %> - LMS</title>
  
  <!-- Tailwind + DaisyUI -->
  <link href="/css/output.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Custom CSS -->
  <link href="/css/custom.css" rel="stylesheet">
  
  <!-- Teacher Theme -->
  <link href="/css/teacher-theme.css" rel="stylesheet">
  
  <!-- Flatpickr for beautiful datetime picker -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <style>
    /* 
      AGGRESSIVE GLASSMORPHISM FOR FLATPICKR 
      Using !important to ensure overrides apply over default themes
    */
    .flatpickr-calendar {
      background: rgba(255, 255, 255, 0.7) !important;
      backdrop-filter: blur(20px) !important;
      -webkit-backdrop-filter: blur(20px) !important;
      border: 1px solid rgba(255, 255, 255, 0.6) !important;
      border-radius: 20px !important;
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15) !important;
      font-family: inherit !important;
      padding: 10px !important;
    }
    
    .flatpickr-calendar.arrowTop:before, 
    .flatpickr-calendar.arrowTop:after,
    .flatpickr-calendar.arrowBottom:before, 
    .flatpickr-calendar.arrowBottom:after {
      display: none !important; /* Hide arrows for cleaner floating look */
    }

    .flatpickr-months {
      padding: 10px !important;
      align-items: center !important;
      background: transparent !important;
    }

    .flatpickr-current-month {
      font-size: 1.1rem !important;
      padding-top: 0 !important;
    }
    
    .flatpickr-current-month span.cur-month {
      font-weight: 700 !important;
      color: #1f2937 !important;
    }

    .flatpickr-current-month .numInputWrapper span.arrowUp:after {
      border-bottom-color: #1f2937 !important;
    }
    .flatpickr-current-month .numInputWrapper span.arrowDown:after {
      border-top-color: #1f2937 !important;
    }

    .flatpickr-weekdays {
      background: transparent !important;
      margin-bottom: 10px !important;
    }

    span.flatpickr-weekday {
      color: #6b7280 !important;
      font-weight: 600 !important;
    }

    .flatpickr-day {
      border-radius: 12px !important;
      border: 1px solid transparent !important;
      color: #374151 !important;
      font-weight: 500 !important;
      transition: all 0.2s ease !important;
      margin-top: 2px !important;
    }

    .flatpickr-day:hover,
    .flatpickr-day:focus {
      background: rgba(75, 107, 251, 0.15) !important;
      border-color: rgba(75, 107, 251, 0.2) !important;
    }

    .flatpickr-day.selected, 
    .flatpickr-day.startRange, 
    .flatpickr-day.endRange, 
    .flatpickr-day.selected.inRange, 
    .flatpickr-day.startRange.inRange, 
    .flatpickr-day.endRange.inRange, 
    .flatpickr-day.selected:focus, 
    .flatpickr-day.startRange:focus, 
    .flatpickr-day.endRange:focus, 
    .flatpickr-day.selected:hover, 
    .flatpickr-day.startRange:hover, 
    .flatpickr-day.endRange:hover {
      background: #4b6bfb !important;
      border-color: #4b6bfb !important;
      color: white !important;
      box-shadow: 0 4px 10px rgba(75, 107, 251, 0.4) !important;
    }

    .flatpickr-day.today {
      background: rgba(255, 255, 255, 0.8) !important;
      border-color: #ef4444 !important; /* Warning/Error color for Today for visibility */
      color: #ef4444 !important;
      font-weight: bold !important;
    }
    
    .flatpickr-day.today.selected {
      background: #4b6bfb !important;
      border-color: #4b6bfb !important;
      color: white !important;
    }

    .flatpickr-time {
      border-top: 1px solid rgba(0,0,0,0.05) !important;
      padding-top: 10px !important;
      margin-top: 10px !important;
    }

    .flatpickr-time input:hover, 
    .flatpickr-time .flatpickr-am-pm:hover, 
    .flatpickr-time input:focus, 
    .flatpickr-time .flatpickr-am-pm:focus {
      background: rgba(75, 107, 251, 0.1) !important;
    }
  </style>
</head>
<body>
  <%- include('../shared/navbar', { user }) %>
  
  <div class="container mx-auto px-3 sm:px-4 py-4 sm:py-8 max-w-7xl">
    <!-- Breadcrumb -->
    <div class="text-sm breadcrumbs mb-4 sm:mb-6 overflow-x-auto">
      <ul>
        <li><a href="/teacher/dashboard"><i class="fas fa-home"></i> Dashboard</a></li>
        <li><a href="/teacher/courses"><i class="fas fa-book"></i> Courses</a></li>
        <li><a href="/teacher/courses/<%= course.id %>"><i class="fas fa-graduation-cap"></i> <%= course.title %></a></li>
        <li><a href="/teacher/assignments"><i class="fas fa-clipboard-list"></i> Assignments</a></li>
        <li><i class="fas fa-edit"></i> Edit Assignment</li>
      </ul>
    </div>

    <!-- Page Header -->
    <div class="mb-6 sm:mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold mb-2">
        <i class="fas fa-edit mr-2"></i>Edit Assignment
      </h1>
      <p class="text-sm sm:text-base text-base-content/70">Update assignment details and deadline</p>
    </div>

    <!-- Flash Messages -->
    <% if (locals.error) { %>
      <div class="alert alert-error mb-6 shadow-lg">
        <i class="fas fa-exclamation-circle"></i>
        <span><%= error %></span>
      </div>
    <% } %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content (2/3 width) -->
      <div class="lg:col-span-2">
        <!-- Edit Form Card -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-xl mb-4">
              <i class="fas fa-edit mr-2"></i>Update Assignment
            </h2>

            <% if (hasSubmissions) { %>
              <div class="alert alert-warning mb-4">
                <i class="fas fa-exclamation-triangle"></i>
                <div>
                  <h3 class="font-bold">Submissions exist for this assignment</h3>
                  <div class="text-sm">
                    <%= submissionCount %> student<%= submissionCount === 1 ? ' has' : 's have' %> already submitted. 
                    Be careful when editing assignment details.
                  </div>
                </div>
              </div>
            <% } %>

            <form action="/teacher/assignments/<%= assignment.id %>/edit" method="POST" id="editForm" enctype="multipart/form-data">
              <!-- Title -->
              <div class="form-control mb-4">
                <label class="label">
                  <span class="label-text font-semibold">
                    Title <span class="text-error">*</span>
                  </span>
                </label>
                <input 
                  type="text" 
                  name="title" 
                  class="input input-bordered w-full" 
                  value="<%= assignment.title %>"
                  required
                  maxlength="200"
                >
              </div>

              <!-- Description -->
              <div class="form-control mb-4">
                <label class="label">
                  <span class="label-text font-semibold">Description</span>
                </label>
                <textarea 
                  name="description" 
                  class="textarea textarea-bordered h-32" 
                  placeholder="Assignment instructions and requirements"
                ><%= assignment.description || '' %></textarea>
              </div>
              
              <!-- Deadline -->
              <div class="form-control mb-4">
                <label class="label">
                  <span class="label-text font-semibold">
                    Deadline <span class="text-error">*</span>
                  </span>
                </label>
                <div class="relative">
                  <input 
                    type="text" 
                    name="deadline" 
                    id="deadline"
                    class="input input-bordered w-full cursor-pointer bg-white pr-10" 
                    value=""
                    required
                    readonly
                  >
                  <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none text-base-content/50 transition-all duration-300 hover:text-primary hover:scale-110">
                    <i class="fas fa-calendar-alt text-lg"></i>
                  </div>
                </div>
                <label class="label">
                  <span class="label-text-alt text-base-content/70">
                    <i class="fas fa-info-circle mr-1"></i>
                    The deadline must be in the future
                  </span>
                </label>
              </div>

              <!-- Materials Management -->
              <div class="divider">Attached Materials</div>
              
              <!-- Hidden inputs for deleted materials -->
              <div id="deletedMaterialsContainer"></div>

              <% if (assignment.materials && assignment.materials.length > 0) { %>
                <div class="form-control mb-4">
                  <label class="label">
                    <span class="label-text font-semibold">Existing Materials</span>
                  </label>
                  <div class="space-y-2">
                    <% assignment.materials.forEach(material => { %>
                      <div class="flex items-center justify-between p-3 bg-base-200 rounded-lg text-sm existing-material-item" id="material-<%= material.id %>" data-title="<%= material.title %>">
                        <div class="flex items-center gap-2 overflow-hidden">
                          <% if (material.type === 'file') { %>
                            <i class="fas fa-file-pdf text-error shrink-0"></i>
                          <% } else { %>
                            <i class="fas fa-link text-info shrink-0"></i>
                          <% } %>
                          <div class="flex flex-col truncate">
                            <a href="<%= material.url %>" target="_blank" class="link link-hover font-medium truncate material-title"><%= material.title %></a>
                            <span class="text-xs text-base-content/60"><%= material.type === 'file' ? 'File' : 'Link' %></span>
                          </div>
                        </div>
                        <button type="button" class="btn btn-ghost btn-xs text-error tooltip" data-tip="Delete Material" onclick="markForDeletion('<%= material.id %>', '<%= material.title %>')">
                          <i class="fas fa-trash"></i>
                        </button>
                      </div>
                    <% }) %>
                  </div>
                </div>
              <% } %>

              <!-- New File Uploads -->
              <div class="form-control mb-4">
                <label class="label">
                  <span class="label-text font-semibold">
                    <i class="fas fa-file-upload mr-2"></i>Add New Files
                  </span>
                </label>
                <div id="fileUploadsContainer" class="space-y-3">
                  <div class="file-upload-row">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                      <div class="md:col-span-2">
                        <input 
                          type="file" 
                          name="materials" 
                          class="file-input file-input-bordered file-input-primary w-full material-file-input" 
                          accept=".pdf,.doc,.docx,.ppt,.pptx,.txt,.zip"
                          onchange="checkDuplicateFiles(this)"
                        >
                      </div>
                      <div>
                        <input 
                          type="text" 
                          name="material_titles[]" 
                          placeholder="File title (optional)"
                          class="input input-bordered w-full"
                        >
                      </div>
                    </div>
                  </div>
                </div>
                <button type="button" class="btn btn-sm btn-outline mt-2 w-full max-w-xs" onclick="addFileUpload()">
                  <i class="fas fa-plus mr-2"></i>Add Another File
                </button>
                <label class="label">
                  <span class="label-text-alt text-base-content/60 break-words text-xs sm:text-sm">Supported: PDF, DOC, DOCX, PPT, PPTX, TXT, ZIP (Max 10MB each)</span>
                </label>
              </div>

              <!-- New URL Links -->
              <div class="form-control mb-6">
                <label class="label">
                  <span class="label-text font-semibold">
                    <i class="fas fa-link mr-2"></i>Add New Links
                  </span>
                </label>
                <div id="urlLinksContainer" class="space-y-3">
                  <div class="url-link-row">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                      <div class="md:col-span-2">
                        <input 
                          type="url" 
                          name="material_urls[]" 
                          placeholder="https://example.com/resource"
                          class="input input-bordered w-full"
                        >
                      </div>
                      <div>
                        <input 
                          type="text" 
                          name="url_titles[]" 
                          placeholder="Link title (optional)"
                          class="input input-bordered w-full"
                        >
                      </div>
                    </div>
                  </div>
                </div>
                <button type="button" class="btn btn-sm btn-outline mt-2 w-full max-w-xs" onclick="addUrlLink()">
                  <i class="fas fa-plus mr-2"></i>Add Another Link
                </button>
              </div>

              <div class="form-control mb-6">
                <label class="label">
                  <span class="label-text font-semibold">Reason for Change (optional)</span>
                </label>
                <textarea 
                  name="change_reason" 
                  class="textarea textarea-bordered h-24" 
                  placeholder="Explain why you're making these changes (for your records)"
                  maxlength="500"
                ></textarea>
                <label class="label">
                  <span class="label-text-alt text-base-content/70">
                    Max 500 characters
                  </span>
                </label>
              </div>

              <div class="flex gap-3">
                <button type="submit" class="btn btn-primary" id="submitBtn" onclick="this.disabled=true; this.innerHTML='<span class=\'loading loading-spinner\'></span> Saving...'; this.form.submit();">
                  <i class="fas fa-save mr-2"></i>Save Changes
                </button>
                <a href="/teacher/courses/<%= course.id %>" class="btn btn-outline" style="background-color: #ef4444; color: white; border-color: #ef4444;">
                  <i class="fas fa-times mr-2"></i>Cancel
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Sidebar (1/3 width) -->
      <div class="space-y-6">
        <!-- Submission Stats -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-lg mb-4">
              <i class="fas fa-chart-bar mr-2"></i>Submission Statistics
            </h2>

            <div class="stats stats-vertical shadow bg-base-200 w-full">
              <div class="stat py-4">
                <div class="stat-title text-xs">Total Submissions</div>
                <div class="stat-value text-2xl text-primary"><%= submissionCount %></div>
              </div>

              <% if (submissionCount > 0) { %>
                <div class="stat py-4">
                  <div class="stat-title text-xs">Graded</div>
                  <div class="stat-value text-2xl text-success"><%= gradedCount %></div>
                </div>

                <div class="stat py-4">
                  <div class="stat-title text-xs">Pending Review</div>
                  <div class="stat-value text-2xl text-warning"><%= submissionCount - gradedCount %></div>
                </div>
              <% } %>
            </div>

            <% if (submissionCount > 0) { %>
              <a href="/teacher/assignments/<%= assignment.id %>/submissions" class="btn btn-sm btn-primary mt-4 w-full">
                <i class="fas fa-eye mr-2"></i>View All Submissions
              </a>
            <% } %>
          </div>
        </div>

        <!-- Important Notes -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-lg mb-4">
              <i class="fas fa-lightbulb mr-2 text-warning"></i>Important Notes
            </h2>

            <div class="space-y-3 text-sm">
              <div class="flex items-start gap-2">
                <i class="fas fa-check-circle text-success mt-1"></i>
                <div>Only the deadline can be edited after assignment creation</div>
              </div>

              <div class="flex items-start gap-2">
                <i class="fas fa-check-circle text-success mt-1"></i>
                <div>The new deadline must be set to a future date and time</div>
              </div>

              <% if (hasSubmissions) { %>
                <div class="flex items-start gap-2">
                  <i class="fas fa-info-circle text-info mt-1"></i>
                  <div>Students who have already submitted will not be affected, but they can still resubmit before the new deadline</div>
                </div>
              <% } else { %>
                <div class="flex items-start gap-2">
                  <i class="fas fa-info-circle text-info mt-1"></i>
                  <div>No submissions yet, so you have full flexibility in setting the deadline</div>
                </div>
              <% } %>

              <div class="flex items-start gap-2">
                <i class="fas fa-exclamation-triangle text-warning mt-1"></i>
                <div>Students will see the updated deadline immediately</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../shared/footer') %>

  <!-- Flatpickr Library -->
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  
  <script>
    // Initialize Flatpickr
    document.addEventListener('DOMContentLoaded', function() {
      const deadlineInput = document.getElementById('deadline');
      const now = new Date();
      now.setMinutes(now.getMinutes() + 10); // Min date is now + 10 mins

      // Ensure we have a valid ISO string for defaultDate
      const defaultDateStr = "<%= assignment.deadline.toISOString() %>";
      
      flatpickr(deadlineInput, {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        altInput: true,
        altFormat: "F j, Y at h:i K",
        minDate: now,
        defaultDate: defaultDateStr, 
        time_24hr: false,
        disableMobile: true,
        minuteIncrement: 1,
        animate: true,
        onChange: function(selectedDates, dateStr, instance) {
          deadlineInput.value = dateStr; 
        }
      });
    });

    // Handle File Upload Duplicates
    function checkDuplicateFiles(input) {
      if (!input.files || input.files.length === 0) return;
      
      const newFile = input.files[0];
      const existingItems = document.querySelectorAll('.existing-material-item');
      
      existingItems.forEach(item => {
        const existingTitle = item.getAttribute('data-title');
        const id = item.id.replace('material-', '');
        
        // Simple name check - if new file name includes existing title or vice versa
        // Or exact match if we assume titles match filenames.
        // Let's do exact match on title vs filename for now, assuming titles ARE filenames usually.
        if (existingTitle && newFile.name === existingTitle) {
           if (confirm(`Warning: A file named "${newFile.name}" already exists.\n\nDo you want to REPLACE the existing file with this new one?`)) {
             markForDeletion(id, existingTitle, true); // True = silent deletion (replaced)
           } else {
             input.value = ''; // Clear input if user cancels
           }
        }
      });
    }

    // Mark for Deletion (Modified to handle form submission)
    function markForDeletion(id, title, silent = false) {
      if (!silent && !confirm(`Are you sure you want to delete "${title}"? This will be removed when you save changes.`)) {
        return;
      }

      // Add hidden input
      const container = document.getElementById('deletedMaterialsContainer');
      const input = document.createElement('input');
      input.type = 'hidden';
      input.name = 'delete_material_ids[]';
      input.value = id;
      container.appendChild(input);

      // Hide UI element
      const element = document.getElementById(`material-${id}`);
      if (element) {
        if (silent) {
           element.innerHTML = `<span class="text-warning italic"><i class="fas fa-exchange-alt mr-2"></i>Replaced by new upload (pending save)</span>`;
        } else {
           element.style.display = 'none';
        }
      }
    }

    // Add File Upload Row
    function addFileUpload() {
      const container = document.getElementById('fileUploadsContainer');
      const row = document.createElement('div');
      row.className = 'file-upload-row relative pt-2';
      row.innerHTML = `
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
          <div class="md:col-span-2">
            <input 
              type="file" 
              name="materials" 
              class="file-input file-input-bordered file-input-primary w-full material-file-input" 
              accept=".pdf,.doc,.docx,.ppt,.pptx,.txt,.zip"
              onchange="checkDuplicateFiles(this)"
            >
          </div>
          <div>
            <input 
              type="text" 
              name="material_titles[]" 
              placeholder="File title (optional)"
              class="input input-bordered w-full"
            >
          </div>
        </div>
        <button type="button" class="btn btn-circle btn-ghost btn-xs absolute -right-2 top-0 text-error" onclick="this.parentElement.remove()">
          <i class="fas fa-times"></i>
        </button>
      `;
      container.appendChild(row);
    }
    
    // Add URL Link Row
    function addUrlLink() {
      const container = document.getElementById('urlLinksContainer');
      const row = document.createElement('div');
      row.className = 'url-link-row relative pt-2';
      row.innerHTML = `
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
          <div class="md:col-span-2">
            <input 
              type="url" 
              name="material_urls[]" 
              placeholder="https://example.com/resource"
              class="input input-bordered w-full"
            >
          </div>
          <div>
            <input 
              type="text" 
              name="url_titles[]" 
              placeholder="Link title (optional)"
              class="input input-bordered w-full"
            >
          </div>
        </div>
        <button type="button" class="btn btn-circle btn-ghost btn-xs absolute -right-2 top-0 text-error" onclick="this.parentElement.remove()">
          <i class="fas fa-times"></i>
        </button>
      `;
      container.appendChild(row);
    }

    // Client-side form validation
    document.getElementById('editForm').addEventListener('submit', function(e) {
      const deadlineInput = document.getElementById('deadline');
      // ... rest of validation ... (handled in simplified view)
    });
  </script>
</body>
</html>
