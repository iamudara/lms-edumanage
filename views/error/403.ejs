<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>403 - Access Denied | LMS EduManage</title>
    
    <!-- Tailwind CSS + DaisyUI -->
    <link href="/css/output.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/custom.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-base-200 min-h-screen flex items-center justify-center">
    <div class="container mx-auto px-4 py-8">
        <div class="card w-full max-w-2xl mx-auto bg-base-100 shadow-xl border border-base-300">
            <div class="card-body text-center">
                <!-- Error Icon -->
                <div class="flex justify-center mb-6">
                    <div class="text-warning text-8xl">
                        <i class="fas fa-ban"></i>
                    </div>
                </div>

                <!-- Error Code -->
                <h1 class="text-6xl font-bold text-warning mb-4">403</h1>
                
                <!-- Error Message -->
                <h2 class="text-2xl font-semibold mb-2">Access Denied</h2>
                <p class="text-base-content opacity-70 mb-8 max-w-md mx-auto">
                    <%= typeof message !== 'undefined' ? message : "You don't have permission to access this page." %>
                </p>

                <!-- Navigation Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 justify-center">
                    <a href="javascript:history.back()" class="btn btn-outline">
                        <i class="fas fa-arrow-left"></i>
                        Go Back
                    </a>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <% if (user.role === 'admin') { %>
                            <a href="/admin/dashboard" class="btn btn-primary">
                                <i class="fas fa-home"></i>
                                Admin Dashboard
                            </a>
                        <% } else if (user.role === 'teacher') { %>
                            <a href="/teacher/dashboard" class="btn btn-primary">
                                <i class="fas fa-home"></i>
                                Teacher Dashboard
                            </a>
                        <% } else if (user.role === 'student') { %>
                            <a href="/student/dashboard" class="btn btn-primary">
                                <i class="fas fa-home"></i>
                                Student Dashboard
                            </a>
                        <% } %>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt"></i>
                            Login
                        </a>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-6 text-sm opacity-60">
            <p>&copy; <%= new Date().getFullYear() %> LMS EduManage. All rights reserved.</p>
        </div>
    </div>
</body>
</html>
